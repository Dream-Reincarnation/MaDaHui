<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/video_play_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/video_backs"
        android:layout_width="@dimen/xdp_40"
        android:layout_height="@dimen/xdp_40"
        android:layout_marginTop="@dimen/xdp_34">

        <ImageView
            android:layout_width="@dimen/xdp_9"
            android:layout_height="@dimen/xdp_16"
            android:layout_marginLeft="@dimen/xdp_12"
            android:src="@mipmap/fanhui3" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/take_videomusic"
        android:layout_marginTop="@dimen/xdp_34"
        android:layout_width="wrap_content"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="@dimen/xdp_15"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/xdp_10"
            android:layout_height="@dimen/xdp_10"
            android:src="@mipmap/videoed_music"

            />
        <TextView
            android:id="@+id/edit_musicname"
            android:layout_width="@dimen/xdp_50"
            android:layout_height="wrap_content"
            android:text="选择音乐"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="-1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/xsp_10"
            android:layout_marginLeft="@dimen/xdp_6"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/xdp_33"
        android:layout_marginRight="@dimen/xdp_18">

       <!-- <LinearLayout
            android:id="@+id/take_videomusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/xdp_18"
                android:layout_height="@dimen/xdp_24"
                android:src="@mipmap/videoed_music" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_8"
                android:text="音乐"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_10" />
        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/take_videocover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/xdp_20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/take_change"
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_22"
                android:src="@mipmap/dyna_cover" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_8"
                android:text="封面"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/take_videotailor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/take_videocover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/xdp_20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/take_changespeed"
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:src="@mipmap/tailor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_8"
                android:text="裁剪"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/take_videocut"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/take_videotailor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/xdp_20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:src="@mipmap/cut_music" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_8"
                android:text="裁剪音乐"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_10" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/xdp_20"
        android:layout_marginBottom="@dimen/xdp_20">

        <LinearLayout
            android:id="@+id/dyna_musiclin"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:layout_gravity="center"
                android:src="@mipmap/dyna_music" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/xdp_3"
                android:text="配乐"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/xdp_21"
            android:layout_toRightOf="@id/dyna_musiclin"
            android:id="@+id/video_tagslin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/xdp_24"
                android:layout_height="wrap_content"
                android:src="@mipmap/dyna_tags" />

            <TextView
                android:layout_marginTop="@dimen/xdp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贴纸"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_10"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/video_tagslin"
            android:id="@+id/video_filterlin"
            android:layout_marginLeft="@dimen/xdp_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:src="@mipmap/filter" />

            <TextView
                android:layout_marginTop="@dimen/xdp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="滤镜"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_10"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/video_filterlin"
            android:id="@+id/video_spcaillin"
            android:layout_marginLeft="@dimen/xdp_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:src="@mipmap/specailefeckts" />

            <TextView
                android:layout_marginTop="@dimen/xdp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特效"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_10"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_toRightOf="@id/video_spcaillin"
            android:id="@+id/take_videocaption"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/xdp_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:src="@mipmap/caption" />

            <TextView
                android:layout_marginTop="@dimen/xdp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="字幕"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_10"

                />
        </LinearLayout>
        
        <TextView
            android:id="@+id/video_next"
            android:layout_width="@dimen/xdp_65"
            android:layout_height="@dimen/xdp_30"
            android:text="下一步"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xdp_21"
            android:gravity="center"
            android:background="@drawable/dyna_follow"

            />
    </RelativeLayout>

    <com.example.txrecord.weight.TCEditMusicPannel
        android:visibility="gone"
        android:id="@+id/tc_record_bgm_pannel"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="@dimen/xdp_250"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-4dp" />

</FrameLayout>