<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/xdp_64"
    android:layout_marginLeft="@dimen/xdp_8"
    android:layout_height="@dimen/xdp_64">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/xdp_5"
        app:cardElevation="@dimen/xdp_0"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/picture_img"
            />
        <FrameLayout
            android:id="@+id/picture_del"
            android:layout_width="@dimen/xdp_20"
            android:layout_gravity="right"
            android:layout_height="@dimen/xdp_20">
        <ImageView
            android:layout_gravity="right"
            android:layout_width="@dimen/xdp_15"
            android:layout_height="@dimen/xdp_15"
            android:src="@mipmap/picvideo_del"
            />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>