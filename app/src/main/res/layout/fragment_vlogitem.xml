<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/xdp_9"
    android:layout_marginRight="@dimen/xdp_12"
    android:layout_marginLeft="@dimen/xdp_12"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/vlog_item_head"
             android:layout_width="@dimen/xdp_40"
             android:layout_height="@dimen/xdp_40"
             android:src="@mipmap/photo"
             />
        <TextView

            android:id="@+id/vlog_item_name"
            android:layout_toRightOf="@id/vlog_item_head"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/xdp_10"
            android:layout_height="wrap_content"
            android:text="迪丽热巴"
            android:textSize="@dimen/xsp_15"
            android:textColor="@color/black"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/vlog_item_createtime"
            android:layout_marginTop="@dimen/xdp_8"
            android:layout_marginLeft="@dimen/xdp_10"
            android:layout_below="@id/vlog_item_name"
            android:textColor="@color/mine_unselect"
            android:layout_toRightOf="@id/vlog_item_head"
            android:layout_width="wrap_content"
            android:textSize="@dimen/xsp_11"
            android:layout_height="wrap_content"
            android:text="00-00-00"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xsp_15"
        android:layout_marginTop="@dimen/xdp_8"
        android:id="@+id/vlog_item_title"
        android:text="我是一个标题"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"
        />
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/xdp_10"
        android:layout_width="@dimen/xdp_175"
        app:cardCornerRadius="@dimen/xdp_5"
        app:cardElevation="@dimen/xdp_0"
        android:layout_height="@dimen/xdp_260"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
             <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:id="@+id/vlog_item_thumb"
                android:scaleType="centerCrop"

                />
            <ImageView
                android:layout_width="@dimen/xdp_13"
                android:layout_height="@dimen/xdp_15"
                android:src="@mipmap/mine_pause"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/xdp_10"
                android:layout_marginBottom="@dimen/xdp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vlog_item_num"
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/xdp_28"
                android:layout_marginBottom="@dimen/xdp_9"
                />
        </FrameLayout>
        
        
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/xdp_10"
        android:layout_width="match_parent"
        android:background="@color/background"
        android:id="@+id/vlog_item_rel"
        android:layout_height="@dimen/xdp_59"/>
    <FrameLayout
        android:layout_marginTop="@dimen/xdp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/vlog_item_comment_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/xdp_80"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/xdp_15"
                android:layout_height="@dimen/xdp_15"
                android:src="@mipmap/mine_commnet"
                />
            <TextView
                android:id="@+id/vlog_item_comment"
                android:layout_marginLeft="@dimen/xdp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="评论"
                android:textSize="@dimen/xsp_13"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/vlog_item_like_lin"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/xdp_24"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/vlog_item_like"

                android:layout_width="@dimen/xdp_15"
                android:layout_height="@dimen/xdp_15"
                android:src="@mipmap/mine_unlike"
                android:layout_marginRight="@dimen/xdp_5"
                />
            <TextView
                android:id="@+id/vlog_item_likenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="赞"
                />
        </LinearLayout>
    </FrameLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="@dimen/xdp_5"
      android:background="@color/background"
      />
</LinearLayout>
