<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">


    

    <RelativeLayout
         android:id="@+id/picjoin_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:paddingRight="30dp"
            android:src="@mipmap/fanhui3" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="@dimen/xdp_65"
            android:layout_height="@dimen/xdp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/dyna_follow"
            android:text="下一步"
            android:textColor="@color/white"
             />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/picjoin_card"
        android:layout_below="@id/picjoin_top"
        android:layout_marginTop="@dimen/xdp_10"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardElevation="@dimen/xdp_0"
        app:cardCornerRadius="@dimen/xdp_5"

        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/layout_palyer"
            android:layout_width="@dimen/xdp_238"
            android:layout_height="@dimen/xdp_450"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/xdp_30"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/transition1"
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/dyna_pic_left" />

            <TextView
                android:layout_below="@id/transition1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/xdp_6"
                android:gravity="center"
                android:text="左右"
                android:layout_centerInParent="true"

                android:textSize="@dimen/xsp_10"
                android:textColor="@color/white" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/transition2"
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/dyna_pic_top" />

            <TextView
                android:layout_below="@id/transition2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/xdp_6"
                android:text="上下"
                android:textSize="@dimen/xsp_10"
                android:textColor="@color/white" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/transition3"
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/dyna_pic_amplifica" />

            <TextView
                android:layout_below="@id/transition3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/xdp_6"
                android:text="放大"
                android:textSize="@dimen/xsp_10"

                android:textColor="@color/white" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/transition4"
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/dyna_pic_shrink" />

            <TextView
                android:layout_below="@id/transition4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="缩小"
                android:layout_marginTop="@dimen/xdp_6"
                android:textSize="@dimen/xsp_10"

                android:textColor="@color/white" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/transition5"
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/dyna_pic_rote"/>

            <TextView
                android:layout_below="@id/transition5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="旋转"
                android:layout_marginTop="@dimen/xdp_6"
                android:textSize="@dimen/xsp_10"
                android:textColor="@color/white" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/transition6"
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_24"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/dyna_pic_falsin" />

            <TextView
                android:layout_below="@id/transition6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="淡入淡出"
                android:layout_marginTop="@dimen/xdp_6"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/xsp_10"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>