<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_0"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_460"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_44"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/psw_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xdp_12"
                android:layout_marginTop="@dimen/xdp_12"
                android:src="@mipmap/cuo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="请输入支付密码"
                android:textColor="@color/black"
                android:textSize="@dimen/xsp_15" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_1"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_44"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_marginTop="@dimen/xdp_12"
            android:layout_marginRight="@dimen/xdp_12"
            android:background="@drawable/pay"
            android:orientation="horizontal"

            >

            <EditText
                android:id="@+id/psw_ed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/xdp_12"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入支付密码"
                android:inputType="textPassword"
                android:maxLength="32"
                android:singleLine="true" />

            <Button
                android:id="@+id/psw_pay"
                android:layout_width="@dimen/xdp_72"
                android:layout_height="match_parent"
                android:background="@color/pay"
                android:gravity="center"
                android:text="付款"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_2"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_marginRight="@dimen/xdp_12"
            android:background="@color/background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboardViewPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical" />
</FrameLayout>