<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/xdp_15"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/xdp_40"
            android:layout_height="@dimen/xdp_40"
            android:src="@mipmap/photo"
            android:id="@+id/comment_img"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关虎屯屯长"
            android:textSize="@dimen/xsp_15"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/xdp_11"
            />
            <TextView

                android:id="@+id/comment_time"
                android:layout_marginLeft="@dimen/xdp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08-17"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/comment_like"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xdp_17"

            android:layout_marginTop="@dimen/xdp_0"
            android:src="@mipmap/aixin" />
        <TextView
            android:layout_marginLeft="@dimen/xdp_2"
            android:layout_marginRight="@dimen/xdp_12"
            android:id="@+id/comment_likenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5w"
            android:textSize="@dimen/xsp_11"
            android:textColor="@color/mine_unselect"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/xdp_13"
        android:layout_marginLeft="@dimen/xdp_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xsp_15"
        android:textColor="@color/black"
        android:id="@+id/comment_context"
        android:text="他家衣服怎么样他家衣服怎么样他家衣服怎么他家衣服"
        />
    <LinearLayout
        android:layout_marginRight="@dimen/xdp_13"
        android:layout_marginTop="@dimen/xdp_10"
        android:layout_marginLeft="@dimen/xdp_60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background"
        >
       <LinearLayout
           android:layout_marginTop="@dimen/xdp_8"
           android:layout_width="wrap_content"
           android:layout_marginRight="@dimen/xdp_17"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <TextView
               android:id="@+id/comment_name2"
               android:layout_marginLeft="@dimen/xdp_11"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="二四六八:"
               android:textColor="@color/black"
               android:textSize="@dimen/xsp_15"
               />
           <TextView
               android:id="@+id/comment_text"
               android:textColor="@color/black"
               android:textSize="@dimen/xsp_15"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="很好很好很好很好很好很好很好很好很好很好很好很好很好很好"
               />
       </LinearLayout>
        <LinearLayout
            android:id="@+id/comment_morelin"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/xdp_10"
             android:layout_marginBottom="@dimen/xdp_8"
            android:orientation="horizontal"
            >
      <TextView
          android:layout_marginTop="@dimen/xdp_10"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="查看10条回复"
          android:textSize="@dimen/xsp_13"
          />
        <ImageView
            android:layout_marginLeft="@dimen/xdp_5"
            android:layout_marginTop="@dimen/xdp_5"
            android:layout_width="@dimen/xdp_7"
            android:layout_height="@dimen/xdp_11"
            android:src="@mipmap/gengduo"

            android:layout_gravity="center"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>