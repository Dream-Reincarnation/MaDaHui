<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rlPhoto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="@dimen/xdp_50"
                android:layout_height="@dimen/xdp_50"
                android:layout_marginTop="@dimen/xdp_30"
                android:layout_centerHorizontal="true"
                 android:background="@mipmap/char_carme"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivPhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                android:text="拍摄"
                android:textSize="@dimen/xsp_12"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlFile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivFile"
                android:layout_width="@dimen/xdp_50"
                android:layout_height="@dimen/xdp_50"
                android:layout_marginTop="@dimen/xdp_30"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/chat_photo"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivFile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                android:text="相册"
                android:textSize="@dimen/xsp_12"/>
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rlVideo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivVideo"
                android:layout_width="@dimen/xdp_50"
                android:layout_height="@dimen/xdp_50"
                android:layout_marginTop="@dimen/xdp_30"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/transfer"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivVideo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                android:text="转账"
                android:textSize="@dimen/xsp_12"/>
        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlLocation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="@dimen/xdp_50"
                android:layout_height="@dimen/xdp_50"
                android:layout_marginTop="@dimen/xdp_30"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/mail_ico_album"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivLocation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                android:text="位置"
                android:textSize="@dimen/xsp_12"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>