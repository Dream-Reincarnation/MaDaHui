<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/morecomm_back"
            android:layout_width="@dimen/xdp_13"
            android:layout_height="@dimen/xdp_22"
            android:src="@mipmap/fanhui"
            android:layout_marginTop="@dimen/xdp_11"
            android:layout_marginLeft="@dimen/xdp_12"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更多回复"
            android:layout_gravity="center"
            android:textSize="@dimen/xsp_17"
            android:textColor="@color/black"
            android:gravity="center"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_1"
        android:background="@color/background"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/xdp_15"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/xdp_40"
            android:layout_height="@dimen/xdp_40"
            android:src="@mipmap/photo"
            android:id="@+id/morecomm_img"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/morecomm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关虎屯屯长"
                android:textSize="@dimen/xsp_15"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/xdp_11"
                />
            <TextView

                android:id="@+id/morecomm_time"
                android:layout_marginLeft="@dimen/xdp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08-17"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/morecomm_like"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xdp_17"

            android:layout_marginTop="@dimen/xdp_0"
            android:src="@mipmap/aixin" />
        <TextView
            android:layout_marginLeft="@dimen/xdp_2"
            android:layout_marginRight="@dimen/xdp_12"
            android:id="@+id/morecomm_likenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5w"
            android:textSize="@dimen/xsp_11"
            android:textColor="@color/mine_unselect"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/xdp_13"
        android:layout_marginLeft="@dimen/xdp_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xsp_15"
        android:textColor="@color/black"
        android:id="@+id/morecomm_context"
        android:text="他家衣服怎么样他家衣服怎么样他家衣服怎么他家衣服"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/moercomm_rel"
        />
</LinearLayout>