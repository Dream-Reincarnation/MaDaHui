<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/xdp_10"
    android:layout_width="@dimen/xdp_67"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_68"
        app:cardElevation="@dimen/xdp_0"
        app:cardCornerRadius="@dimen/xdp_2"
        >
        <FrameLayout
            android:id="@+id/tvedit_farm"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            app:cardElevation="@dimen/xdp_0"
            android:layout_width="@dimen/xdp_66"
            android:layout_height="@dimen/xdp_66"
            app:cardCornerRadius="@dimen/xdp_2"
            >
            <FrameLayout
                android:id="@+id/tv_fa"
                android:layout_width="match_parent"

                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/tvedit_more"
                android:layout_width="@dimen/xdp_20"
                android:layout_height="@dimen/xdp_20"
                android:layout_gravity="center"
                android:src="@mipmap/search" />
          <ImageView
              android:id="@+id/tvedit_img"
              android:visibility="gone"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        </FrameLayout>

    </androidx.cardview.widget.CardView>
      <TextView
          android:id="@+id/tvedit_tv"
          android:layout_marginTop="@dimen/xdp_5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="音乐名称"
          android:singleLine="true"
          android:ellipsize="end"

          android:layout_gravity="center"
          android:textSize="@dimen/xsp_12"
          android:textColor="@color/white"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/select_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_68"
            android:background="#1f1f22"
            android:layout_marginTop="@dimen/xdp_5"
            app:cardCornerRadius="@dimen/xdp_2"

            app:cardElevation="@dimen/xdp_0">

            <FrameLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:background="#333333">

                <ImageView
                    android:layout_width="@dimen/xdp_20"
                    android:layout_height="@dimen/xdp_20"
                    android:layout_gravity="center"
                    android:src="@mipmap/search" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/xsp_12"
            android:layout_marginTop="@dimen/xdp_5"
            android:text="更多"
            android:textColor="@color/white" />
    </LinearLayout>
</FrameLayout>