<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:orientation="horizontal"

        >

        <ImageView

            android:id="@+id/dialog_head"
            android:layout_width="@dimen/xdp_30"
            android:layout_height="@dimen/xdp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:src="@mipmap/photo" />

        <LinearLayout
            android:layout_width="@dimen/xdp_290"
            android:layout_height="@dimen/xdp_34"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:background="@drawable/greycirclrjiao"
            android:orientation="horizontal">

            <EditText
                android:layout_marginLeft="@dimen/xdp_9"
                android:id="@+id/dialog_ed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="快来说点什么吧..."
                android:textSize="@dimen/xsp_13" />

            <ImageView
                android:id="@+id/dialog_anm"
                android:layout_width="@dimen/xdp_18"
                android:layout_height="@dimen/xdp_18"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/xdp_12"
                android:src="@mipmap/photo" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"

        android:paddingBottom="@dimen/xdp_8"
        android:paddingTop="@dimen/xdp_8"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editCommentDialog"
            android:hint="我也说一句…"
            android:background="@color/grey1"
            android:textSize="@dimen/xsp_14"
            android:maxLines="1"
            android:singleLine="true"
            android:lines="1"
            android:inputType="text"
            android:paddingStart="@dimen/xdp_8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/tvSendCommentDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:gravity="center"
            android:layout_marginStart="@dimen/xdp_8"
            android:textColor="@color/red"
            android:textSize="@dimen/xsp_16"
            />
    </LinearLayout>
 <!--   <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="80dp" />-->
</LinearLayout>