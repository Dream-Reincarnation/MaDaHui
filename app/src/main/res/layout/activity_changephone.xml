<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        layout="@layout/item_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44" />

    <TextView
        android:id="@+id/changephone_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:layout_marginLeft="@dimen/xdp_15"
        android:layout_marginTop="@dimen/xdp_8"
        android:layout_marginRight="@dimen/xdp_15"
        android:gravity="center"
        android:text="为了您的账户安全，需要验证您的身份，验证码将发送至尾号为1942的手机，请注意查收"
        android:textColor="@color/black"
        android:textSize="@dimen/xsp_11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_31"
            android:text="手机号"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/changep_edp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:background="@null"
            android:textSize="@dimen/xsp_13" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"

        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_31"
            android:text="验证码"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/changep_edv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:maxLength="4"
            android:textSize="@dimen/xsp_13" />

        <TextView
            android:id="@+id/changephone_getv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/xdp_12"
            android:text="获取验证码"
            android:textColor="@color/Thme"
            android:textSize="@dimen/xsp_15" />

    </LinearLayout>

    <TextView
        android:id="@+id/changep_bt"
        android:layout_width="@dimen/xdp_315"
        android:layout_height="@dimen/xdp_40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/xdp_85"
        android:background="@drawable/buttonred"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/xsp_13" />
</LinearLayout>