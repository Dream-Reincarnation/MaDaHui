<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#999999"
        android:textSize="12dp"
        android:visibility="gone" />
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginRight="@dimen/xdp_10"
         android:orientation="horizontal"
         >
    <RelativeLayout
        android:layout_width="@dimen/xdp_0"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/chat_item_header"
            android:layout_width="@dimen/xdp_35"
            android:layout_height="@dimen/xdp_35"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            />


        <LinearLayout
            android:visibility="visible"
            android:id="@+id/chat_item_layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/message_text_send"
            android:layout_toLeftOf="@id/chat_item_header"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/shoplin"
                android:layout_width="@dimen/xdp_200"
                android:layout_height="@dimen/xdp_80"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/xdp_5"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shoptitle"
                        android:text="asdasd "
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:textSize="@dimen/xsp_12" />

                    <TextView
                        android:id="@+id/shopprice"
                        android:text="asdasdasd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xdp_30"
                        android:textColor="@color/red"
                        android:textSize="@dimen/xsp_15"

                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/shopimg"
                    android:layout_width="@dimen/xdp_66"
                    android:layout_height="@dimen/xdp_66"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/xdp_10"
                    android:src="@mipmap/photo" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
         <FrameLayout
             android:id="@+id/chat_fram_check"
             android:layout_width="@dimen/xdp_30"
             android:layout_height="match_parent"
             >

             <ImageView
                 android:id="@+id/chat_img"
                 android:layout_width="@dimen/xdp_20"
                 android:layout_height="@dimen/xdp_20"
                 android:layout_gravity="center"
                 android:src="@mipmap/unsel" />
         </FrameLayout>
     </LinearLayout>
</LinearLayout>