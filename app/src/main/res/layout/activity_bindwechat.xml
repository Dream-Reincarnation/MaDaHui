<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        layout="@layout/item_bar"/>
  <RelativeLayout
      android:layout_width="match_parent"
      android:background="@mipmap/bind_wechat_bg"
      android:layout_height="match_parent">
      <ImageView
          android:layout_width="match_parent"
          android:visibility="gone"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@mipmap/bind_wechat_bg"
          />
      <LinearLayout
          android:id="@+id/bind_wechat_lin"
          android:layout_marginTop="@dimen/xdp_22"
          android:layout_marginLeft="@dimen/xdp_14"
          android:layout_marginRight="@dimen/xdp_14"
          android:layout_width="match_parent"
         android:background="@mipmap/bind_wechat_bgw"
          android:orientation="vertical"
          android:layout_height="@dimen/xdp_450" >

          <TextView

              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="关注绑定"
              android:layout_marginTop="@dimen/xdp_70"
              android:layout_gravity="center"
              android:textColor="@color/black"
              android:textSize="@dimen/xsp_17"

              />
          <TextView
              android:layout_marginTop="@dimen/xdp_8"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="麦达汇"
              android:textSize="@dimen/xsp_28"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:layout_gravity="center"
              />
          <TextView
              android:id="@+id/bind_wechat_copy"
              android:layout_width="@dimen/xdp_100"
              android:paddingTop="@dimen/xdp_11"
              android:layout_height="@dimen/xdp_30"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="复制名字"
              android:textSize="@dimen/xsp_13"
              android:textColor="#FA8028"
              />
          <ImageView
              android:layout_width="@dimen/xdp_130"
              android:layout_height="@dimen/xdp_130"
              android:src="@mipmap/wechat_qrcode"
              android:layout_gravity="center"
              android:layout_marginTop="@dimen/xdp_26"
              />
          <TextView
              android:id="@+id/bind_wechat_bt"
              android:layout_marginTop="@dimen/xdp_20"
              android:layout_width="match_parent"
              android:layout_height="@dimen/xdp_40"
              android:background="@drawable/buttonred"
              android:layout_marginLeft="@dimen/xdp_65"
              android:layout_marginRight="@dimen/xdp_65"
              android:text="保存二维码"
              android:textColor="@color/white"
              android:gravity="center"
              android:textSize="@dimen/xsp_19"
              android:textStyle="bold"
              />
          <TextView
              android:id="@+id/bind_tv"
              android:layout_marginTop="@dimen/xdp_20"
              android:layout_width="wrap_content"
              android:textSize="@dimen/xsp_8"
              android:layout_gravity="center"
              android:textColor="@color/black"
              android:layout_height="wrap_content"
              android:text="你已完成绑定公众号，可以保存二维码分享给你的好友!!"
              />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/bind_wechat_tips"
          android:layout_below="@id/bind_wechat_lin"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/xdp_34"
          android:layout_marginRight="@dimen/xdp_14"
          android:layout_marginTop="@dimen/xdp_22"
          android:orientation="vertical"
          >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/xsp_11"
             android:textColor="@color/white"
             android:text="1.请保存二维码到手机相册，使用微信识别关注公众号"
             />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/xsp_11"
              android:textColor="@color/white"
              android:text="2.或者搜索公众号名称“公众号名字”进行关注"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/xsp_11"
              android:textColor="@color/white"
              android:text="3.使用手机号登录的，进行手机号关联绑定即可"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/xsp_11"
              android:textColor="@color/white"
              android:text="4.已使用微信登录的，关注会自动进行绑定"
              />

      </LinearLayout>
  </RelativeLayout>



</LinearLayout>