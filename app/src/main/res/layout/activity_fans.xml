<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:orientation="horizontal">
     <LinearLayout
         android:id="@+id/fans_back"
         android:layout_width="@dimen/xdp_44"
         android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/xdp_13"
            android:layout_height="@dimen/xdp_22"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:src="@mipmap/fanhui" />
     </LinearLayout>
       <com.google.android.material.tabs.TabLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/fans_tab"
           android:layout_gravity="center"
           />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_1"
        android:background="@color/background"
        />
   <androidx.viewpager.widget.ViewPager
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/fans_vp"
       />


</LinearLayout>