<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/circlewhitebg"
    android:layout_height="wrap_content">

     <TextView
         android:id="@+id/share_earn"
         android:layout_marginTop="@dimen/xdp_20"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/xsp_20"
         android:textColor="@color/Thme"
         android:text="分享赚￥1"
         android:layout_gravity="center"
         />
     <TextView
         android:layout_marginTop="@dimen/xdp_20"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/xsp_13"
         android:textColor="@color/black"
         android:gravity="center"
         android:layout_gravity="center"
         android:text="送好友10元代金券\n 好友注册完成首单，你再得5元无门槛代金券"
         />
     <LinearLayout
         android:layout_marginLeft="@dimen/xdp_54"
         android:layout_marginRight="@dimen/xdp_54"
         android:layout_marginTop="@dimen/xdp_20"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal"
         >
          <ImageView
              android:id="@+id/share_wechat"
              android:layout_width="@dimen/xdp_0"
              android:layout_weight="1"
              android:layout_height="@dimen/xdp_50"
              android:src="@mipmap/share_wechat"
              />
          <ImageView
              android:id="@+id/share_wechatfriends"
              android:layout_width="@dimen/xdp_0"
              android:layout_weight="1"
              android:layout_height="@dimen/xdp_50"
              android:src="@mipmap/share_friends"
              />
          <ImageView
              android:id="@+id/share_print"
              android:layout_width="@dimen/xdp_0"
              android:layout_weight="1"
              android:layout_height="@dimen/xdp_50"
              android:src="@mipmap/share_printshot"
              />
          <ImageView
              android:id="@+id/share_link"
              android:layout_width="@dimen/xdp_0"
              android:layout_weight="1"
              android:layout_height="@dimen/xdp_50"
              android:src="@mipmap/share_link"
              />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/share_bottomlin"
         android:layout_marginLeft="@dimen/xdp_94"
         android:layout_marginRight="@dimen/xdp_94"
         android:layout_marginTop="@dimen/xdp_20"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal"
         >
          <ImageView
              android:id="@+id/share_weibo"
              android:layout_width="@dimen/xdp_0"
              android:layout_weight="1"
              android:layout_height="@dimen/xdp_40"
              android:src="@mipmap/share_weibo"
              />
          <ImageView
              android:id="@+id/share_qq"
              android:layout_width="@dimen/xdp_0"
              android:layout_weight="1"
              android:layout_height="@dimen/xdp_40"
              android:src="@mipmap/share_qq"
              />
          <ImageView
              android:id="@+id/share_qqspace"
              android:layout_width="@dimen/xdp_0"
              android:layout_weight="1"
              android:layout_height="@dimen/xdp_40"
              android:src="@mipmap/share_qqspace"
              />

     </LinearLayout>
     <TextView
         android:layout_marginTop="@dimen/xdp_6"
         android:layout_width="match_parent"
         android:layout_height="@dimen/xdp_1"
         android:background="#f5f5f5"
         />
     <TextView
         android:id="@+id/share_cancle"
         android:layout_width="match_parent"
         android:layout_height="@dimen/xdp_54"
         android:text="取消"
         android:textSize="@dimen/xsp_15"
         android:gravity="center"
         android:textColor="@color/black"
         />
</LinearLayout>