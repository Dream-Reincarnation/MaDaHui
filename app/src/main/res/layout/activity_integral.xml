<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/integral_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_188"
        android:background="@mipmap/integral_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_44">

            <FrameLayout
                android:id="@+id/integral_back"
                android:layout_width="@dimen/xdp_40"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/xdp_12"
                    android:layout_height="@dimen/xdp_22"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/xdp_12"
                    android:src="@mipmap/fanhui3" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我的麦穗"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_17" />

            <FrameLayout
                android:id="@+id/integral_info"
                android:layout_width="@dimen/xdp_55"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/xdp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:text="麦穗说明"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsp_13"

                    />
            </FrameLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/xsp_30"
            android:text="麦穗余额"
            android:textColor="@color/white"
            android:textSize="@dimen/xsp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xdp_25"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/xdp_25"
                android:layout_height="@dimen/xdp_25"
                android:layout_gravity="center"
                android:src="@mipmap/integral" />

            <TextView
                android:id="@+id/integral_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/xdp_7"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_35"

                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/xdp_15"
            android:text="麦穗明细"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            android:textStyle="bold" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/integral_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_40"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/xdp_18"
            app:tabBackground="@color/transparent"
            app:tabMode="fixed"
            app:tabRippleColor="@color/transparent" />
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/integral_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>