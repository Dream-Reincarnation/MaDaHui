<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/transfer_back"
            android:layout_width="@dimen/xdp_13"
            android:layout_height="@dimen/xdp_22"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/xdp_12"
            android:src="@mipmap/fanhui" />
        <TextView
            android:id="@+id/chatact_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="转账"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_17" />
    </FrameLayout>
      <ImageView
          android:layout_marginTop="@dimen/xdp_10"
          android:layout_gravity="center"
          android:layout_width="@dimen/xdp_60"
          android:layout_height="@dimen/xdp_60"
          android:id="@+id/transfer_head"
          android:src="@mipmap/photo"
          />
     <TextView
         android:id="@+id/transfer_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="阿佳妮店铺"
         android:layout_marginTop="@dimen/xdp_8"
         android:textColor="@color/black"
         android:layout_gravity="center"
         android:textSize="@dimen/xsp_12"
         />
    <TextView
        android:layout_marginTop="@dimen/xdp_48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转账金额"
        android:textColor="@color/black"
        android:textSize="@dimen/xsp_17"
        android:layout_marginLeft="@dimen/xdp_12"
        />
    <LinearLayout

        android:layout_marginTop="@dimen/xdp_30"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="￥"
            android:textSize="@dimen/xsp_25"
            />
         <EditText
             android:id="@+id/transfer_ed"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@null"
             android:inputType="number"
             android:textColor="@color/black"
             android:textSize="@dimen/xsp_25"
             />
    </LinearLayout>
    <Spinner
        android:id="@+id/spinner"
        android:layout_marginTop="@dimen/xdp_7"
        android:layout_width="@dimen/xdp_150"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:spinnerMode="dialog"
        android:dropDownWidth="80dp"
        android:popupBackground="@color/background"

        />
    <Button
        android:id="@+id/transfer_bt"
        android:layout_marginLeft="@dimen/xdp_10"
        android:layout_marginRight="@dimen/xdp_10"
        android:layout_marginTop="@dimen/xdp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_48"
        android:background="@drawable/buttonred"
        android:text="确认转账"
        android:textColor="@color/white"
        android:textSize="@dimen/xsp_17"
        />
</LinearLayout>