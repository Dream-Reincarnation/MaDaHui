<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:background="@color/white"
        android:orientation="horizontal">
       <LinearLayout
           android:id="@+id/chatcom_back"
           android:layout_width="@dimen/xdp_44"
           android:layout_height="match_parent">
        <ImageView

            android:layout_width="@dimen/xdp_13"
            android:layout_height="@dimen/xdp_22"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:src="@mipmap/fanhui" />
       </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="评论"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_17" />
        <ImageView
            android:id="@+id/chat_set"
            android:layout_width="@dimen/xdp_22"
            android:layout_height="@dimen/xdp_22"
            android:src="@mipmap/chat_service_set"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/xdp_12"
            />
    </FrameLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/chatcom_smart"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatcom_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>