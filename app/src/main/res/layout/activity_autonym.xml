<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/autonym_back"
            android:layout_width="@dimen/xdp_13"
            android:layout_height="@dimen/xdp_22"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:src="@mipmap/fanhui" />

        <TextView
            android:id="@+id/autonym_rele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="实名认证"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_17" />
    </LinearLayout>
      <ImageView
          android:layout_marginTop="@dimen/xdp_74"
          android:id="@+id/autonym_status"
          android:layout_width="@dimen/xdp_70"
          android:layout_height="@dimen/xdp_70"
          android:layout_gravity="center"
          android:src="@mipmap/attaching"
          />
    <LinearLayout
        android:layout_marginTop="@dimen/xdp_32"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/autonym_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="认证审核中......"
          android:textSize="@dimen/xsp_15"
          android:textColor="@color/black"
          android:layout_gravity="center"
          />
        <TextView
            android:id="@+id/autonym_atten"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新认证"
            android:textSize="@dimen/xsp_15"
            android:textColor="@color/Thme"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/autonym_bt"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_marginRight="@dimen/xdp_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_40"
            android:visibility="gone"
            android:background="@drawable/buttonred"
            android:text="查看认证资料"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/xdp_15"
            android:textColor="@color/white"
            android:textSize="@dimen/xsp_15"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/xdp_70"
            android:layout_marginTop="@dimen/xsp_16"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看"
                android:textSize="@dimen/xsp_9"
                android:textColor="@color/mine_unselect"
                />
            <TextView
                android:id="@+id/autonym_yin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私协议》"
                android:textSize="@dimen/xsp_10"
                android:textColor="@color/Thme"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>