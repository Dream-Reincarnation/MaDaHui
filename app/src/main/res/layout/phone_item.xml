<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D000000"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/xdp_10"
        app:cardElevation="@dimen/xdp_0">

        <LinearLayout
            android:layout_width="@dimen/xdp_285"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popchange_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/xdp_15"
                android:text="更换绑定的手机号"
                android:textColor="@color/black"
                android:textSize="@dimen/xsp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/popchange_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/xsp_22"
                android:gravity="center"
                android:text="当前绑定的手机号为\n158****8888"
                android:textColor="@color/black"
                android:textSize="@dimen/xsp_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_1"
                android:layout_marginTop="@dimen/xdp_22"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_44"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popchange_cancle"
                    android:layout_width="@dimen/xdp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/mine_unselect"
                    android:textSize="@dimen/xsp_15"

                    />

                <TextView
                    android:layout_width="@dimen/xdp_1"
                    android:layout_height="match_parent"
                    android:background="@color/background" />

                <TextView
                    android:id="@+id/popchange_query"
                    android:layout_width="@dimen/xdp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="更换"
                    android:textColor="@color/Thme"
                    android:textSize="@dimen/xsp_15"

                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>