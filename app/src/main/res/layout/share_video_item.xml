<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/xdp_15"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/share_video_farm"
        android:layout_width="@dimen/xdp_45"
        android:layout_height="@dimen/xdp_45">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/share_video_head"
        />
        <ImageView
            android:id="@+id/share_video_sel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:src="@mipmap/share_video_sel"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/share_video_name"
        android:layout_marginTop="@dimen/xdp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/xsp_12"
        android:maxLength="4"
        android:ellipsize="end"
        />
</LinearLayout>