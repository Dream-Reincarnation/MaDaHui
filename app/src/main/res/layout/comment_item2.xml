<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/xdp_7"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
    <ImageView
        android:layout_width="@dimen/xdp_20"
        android:layout_height="@dimen/xdp_20"
        android:id="@+id/commitem_head"
        android:src="@mipmap/photo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xsp_15"
        android:id="@+id/commitem_name"
        android:text="省汇中心楼长翼德:"

        android:textStyle="bold"
        />


       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:gravity="right"
           android:orientation="horizontal"
           >
    <ImageView
        android:id="@+id/comment_like"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/xdp_17"
        android:layout_marginTop="@dimen/xdp_0"
        android:layout_gravity="right"
        android:src="@mipmap/aixin" />
    <TextView
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/xdp_2"
        android:layout_marginRight="@dimen/xdp_12"
        android:id="@+id/comment_likenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.5w"
        android:textSize="@dimen/xsp_11"
        android:textColor="@color/mine_unselect"
        />
       </LinearLayout>
   </LinearLayout>
       <TextView
           android:id="@+id/commitem_text"
           android:layout_marginTop="@dimen/xdp_6"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="百因必有果，你的报应就是我"
           android:layout_marginLeft="@dimen/xdp_20"
           />
</LinearLayout>