<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/chatitem_leftlin"
        android:layout_width="@dimen/xdp_250"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginTop="@dimen/xdp_12"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/chatitem_lefthead"
            android:layout_width="@dimen/xdp_44"
            android:src="@mipmap/photo"
            android:layout_height="@dimen/xdp_44" />

        <LinearLayout
            android:id="@+id/remarklin"
            android:layout_width="@dimen/xdp_130"
            android:layout_height="@dimen/xdp_50"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请对本次服务进行点评"
                android:textColor="@color/black"
                android:textSize="@dimen/xsp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/chatitem_remark"
                    android:layout_width="@dimen/xdp_60"
                    android:layout_height="@dimen/xdp_25"
                    android:background="@color/blue"
                    android:text="立即点评"
                    android:textColor="@color/white"

                    />

                <Button
                    android:id="@+id/chatitem_cacle"
                    android:layout_width="@dimen/xdp_60"
                    android:layout_height="@dimen/xdp_25"
                    android:background="@color/white"
                    android:text="暂不点评"
                    android:textColor="@color/black"

                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/redlin_left"
            android:layout_width="@dimen/xdp_180"
            android:layout_height="@dimen/xdp_90"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_0"
                android:layout_weight="1"
                android:background="@color/orange">

                <ImageView
                    android:id="@+id/redimg_left"
                    android:layout_width="@dimen/xdp_33"
                    android:layout_height="@dimen/xdp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xdp_12"
                    android:src="@mipmap/redp" />

                <TextView
                    android:id="@+id/red_moneyleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xdp_12"
                    android:layout_marginTop="@dimen/xdp_10"
                    android:layout_toRightOf="@id/redimg_left"
                    android:text="12.00元"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/red_titleleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/red_moneyleft"
                    android:layout_marginLeft="@dimen/xdp_12"
                    android:layout_marginTop="@dimen/xdp_5"
                    android:layout_toRightOf="@id/redimg_left"
                    android:text="退运费"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_30"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/xdp_12"
                android:gravity="center|left"
                android:text="小额转账" />
        </LinearLayout>

        <TextView
            android:id="@+id/chatitem_lefttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/theml"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="6dp"
            android:paddingRight="8dp"
            android:paddingBottom="6dp"
            android:text="111"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:id="@+id/chatitem_offerlin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xdp_70"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chatitem_shopimg"
                android:layout_width="@dimen/xdp_44"
                android:layout_height="@dimen/xdp_44"
                android:layout_marginLeft="@dimen/xdp_5"
                android:layout_marginTop="@dimen/xdp_5"
                android:src="@mipmap/photo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xdp_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shops_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shops_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300.00"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/shops_tx"
                        android:layout_width="@dimen/xdp_60"
                        android:layout_height="@dimen/xdp_20"
                        android:layout_marginLeft="@dimen/xdp_5"
                        android:background="@drawable/theml"
                        android:text="立即付款"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xdp_10"
                    android:text="订单报价已生成,请付款" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/chatitem_rightlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/xdp_12"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/xdp_250"
            android:id="@+id/chatitem_rela"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chatitem_righttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/xdp_5"
                android:layout_marginRight="@dimen/xdp_7"
                android:background="@drawable/theml"
                android:paddingLeft="8dp"
                android:paddingTop="6dp"
                android:paddingRight="8dp"
                android:paddingBottom="6dp"
                android:text="111"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
  <!--发送商品-->
        <LinearLayout
            android:id="@+id/shoplin"
            android:layout_width="@dimen/xdp_200"
            android:layout_height="@dimen/xdp_80"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/xdp_5"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shoptitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/xsp_12" />

                <TextView
                    android:id="@+id/shopprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xdp_30"
                    android:textColor="@color/red"
                    android:textSize="@dimen/xsp_15"

                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/shopimg"
                android:layout_width="@dimen/xdp_66"
                android:layout_height="@dimen/xdp_66"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/xdp_10"
                android:src="@mipmap/photo" />

        </LinearLayout>
   <!--红包-->
        <LinearLayout
            android:id="@+id/redlin_right"
            android:layout_width="@dimen/xdp_240"
            android:layout_height="@dimen/xdp_90"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_0"
                android:layout_weight="1"
                android:background="@color/orange">

                <ImageView
                    android:id="@+id/redimg_right"
                    android:layout_width="@dimen/xdp_33"
                    android:layout_height="@dimen/xdp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xdp_12"
                    android:src="@mipmap/redp" />

                <TextView
                    android:id="@+id/red_moneyright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xdp_12"
                    android:layout_marginTop="@dimen/xdp_10"
                    android:layout_toRightOf="@id/redimg_right"
                    android:text="12.00元"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsp_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/red_titleright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/red_moneyright"
                    android:layout_marginLeft="@dimen/xdp_12"
                    android:layout_marginTop="@dimen/xdp_5"
                    android:layout_toRightOf="@id/redimg_right"
                    android:text="退运费"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsp_12"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_30"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/xdp_12"
                android:gravity="center|left"
                android:text="小额转账" />
        </LinearLayout>

        <ImageView
            android:id="@+id/chatitem_righthead"
            android:layout_width="@dimen/xdp_44"
            android:layout_height="@dimen/xdp_44"
            android:src="@mipmap/photo" />
    </LinearLayout>

</RelativeLayout>