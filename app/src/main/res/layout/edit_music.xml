<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addmusic_edit"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#1f1f22"
    android:visibility="visible"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_45"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/edit_music_img"
            android:layout_marginTop="@dimen/xdp_14"
            android:layout_marginLeft="@dimen/xdp_30"
            android:layout_width="@dimen/xdp_15"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/xdp_15"
            android:src="@mipmap/dyna_music"
            />

        <TextView
            android:layout_toRightOf="@id/edit_music_img"
            android:layout_marginTop="@dimen/xdp_14"
            android:layout_width="@dimen/xdp_70"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xsp_15"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/xdp_14"
            android:text="音乐名称"
            android:id="@+id/edit_music_name"
            />

        <FrameLayout
            android:id="@+id/addmusic_cancle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xdp_10"
            android:layout_marginTop="@dimen/xdp_8"
            android:layout_width="@dimen/xdp_27"
            android:layout_height="@dimen/xdp_27">
            <ImageView
                android:layout_width="@dimen/xdp_10"
                android:layout_gravity="center"
                android:layout_height="@dimen/xdp_10"
                android:src="@mipmap/dyna_take_false"
                />
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <RelativeLayout
        android:layout_marginLeft="@dimen/xdp_30"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/xdp_37">

        <TextView
            android:id="@+id/edit_video_voice"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="原生"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/xsp_13"
            />
        <LinearLayout
            android:layout_toRightOf="@id/edit_video_voice"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/xdp_8"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/edit_music_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xdp_2"
                android:text="0"
                android:textSize="@dimen/xsp_10"
                android:textColor="@color/tintgrey"
                />
            <SeekBar
                android:id="@+id/musicvlome"
                android:maxHeight="2dp"
                android:max="100"
                android:indeterminate="false"
                android:progress="0"
                android:thumb="@drawable/seek_voice_thumb"
                android:layout_width="@dimen/xdp_115"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/seek_voice_bg"/>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginLeft="@dimen/xdp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_37">

        <TextView
            android:id="@+id/edit_music_voice"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="配乐"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/xsp_13"
            />
        <LinearLayout
            android:layout_toRightOf="@id/edit_music_voice"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/xdp_8"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/edit_music_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xdp_2"
                android:text="0"
                android:textSize="@dimen/xsp_10"
                android:textColor="@color/tintgrey"
                />
            <SeekBar
                android:id="@+id/micvolume"
                android:maxHeight="2dp"
                android:max="100"
                android:indeterminate="false"
                android:progress="0"
                android:thumb="@drawable/seek_voice_thumb"
                android:layout_width="@dimen/xdp_115"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/seek_voice_bg"/>
        </LinearLayout>
    </RelativeLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/edit_music_play"
        android:layout_marginTop="@dimen/xdp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/xdp_30"
        android:textSize="@dimen/xsp_10"
        android:text="视频从0秒开始播放音乐"
        />
    <com.example.txrecord.weight.TimeLineView
        android:layout_marginTop="@dimen/xdp_15"
        android:id="@+id/timeline_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_60"
        android:layout_below="@+id/play_control_layout"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/xdp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/xdp_21"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="剪切音乐"
                android:textSize="@dimen/xsp_10"
                android:layout_marginLeft="@dimen/xdp_30"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/edit_music_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/Thme"
                    android:textSize="@dimen/xsp_10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="__"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsp_10"
                    />
                <TextView
                    android:textSize="@dimen/xsp_10"
                    android:id="@+id/edit_music_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/Thme"
                    />

            </LinearLayout>

        </RelativeLayout>
        <com.ajiani.maidahui.weight.music.DoubleHeadedDragonBar
            android:id="@+id/dyna_seek"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_15"
            android:layout_marginLeft="@dimen/xdp_17"
            android:layout_marginTop="@dimen/xdp_12"
            android:layout_marginRight="@dimen/xdp_19"
            app:bg_color="@color/white"
            app:button_height="@dimen/xdp_12"
            app:button_img="@mipmap/seek_bg"
            app:button_width="@dimen/xdp_12"
            app:seek_height="@dimen/xdp_4"
            app:value_color="@color/Thme"
            />

    </LinearLayout>


</LinearLayout>