<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/comment_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginTop="@dimen/xdp_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comment_img"
            android:layout_width="@dimen/xdp_40"
            android:layout_height="@dimen/xdp_40"
            android:src="@mipmap/photo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xdp_11"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/xsp_15" />

            <TextView

                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xdp_12"
                android:text="" />

        </LinearLayout>

        <ImageView
            android:id="@+id/comment_like"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xdp_17"

            android:layout_marginTop="@dimen/xdp_0"
            android:src="@mipmap/xinaixinfuben" />

        <TextView
            android:id="@+id/comment_likenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xdp_2"
            android:layout_marginRight="@dimen/xdp_12"
            android:text="0"
            android:textColor="@color/mine_unselect"
            android:textSize="@dimen/xsp_11" />
    </LinearLayout>

    <TextView
        android:id="@+id/comment_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xdp_60"
        android:layout_marginTop="@dimen/xdp_13"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/xsp_15" />
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_rell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/xdp_62"
        android:layout_marginTop="@dimen/xdp_17" />

    <TextView
        android:layout_marginTop="@dimen/xdp_12"
        android:id="@+id/comment_unfold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/xdp_60"
        android:text="展开10条回复"
        android:textColor="@color/mine_unselect"
        android:textSize="@dimen/xsp_13" />
</LinearLayout>