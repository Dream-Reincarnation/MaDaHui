<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recharge_back"
            android:layout_width="@dimen/xdp_13"
            android:layout_height="@dimen/xdp_22"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:src="@mipmap/fanhui" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="我的钻石"
          android:gravity="center"
          android:textSize="@dimen/xsp_17"
          android:textColor="@color/black"
          android:layout_gravity="center"
          />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_2"
        android:background="@color/background"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/recharge_rlt"
        android:layout_marginTop="@dimen/xdp_45"
        android:layout_width="@dimen/xdp_300"
        android:layout_height="@dimen/xdp_141"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/zuanbg"
        >
        <LinearLayout
            android:id="@+id/recharge_lin"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/xdp_18"
            android:layout_marginTop="@dimen/xdp_34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明细"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_13"
                />
            <ImageView
                android:layout_marginLeft="@dimen/xdp_5"
                android:layout_width="@dimen/xdp_7"
                android:layout_height="@dimen/xdp_12"
                android:src="@mipmap/gengduo"
                />
        </LinearLayout>

      <TextView
          android:id="@+id/rechage_jewel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2786.00"
          android:textColor="@color/white"
          android:layout_centerInParent="true"
          android:textSize="@dimen/xsp_35"
          android:textStyle="bold"
          />
        <TextView
            android:layout_below="@id/rechage_jewel"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钻石余额(不可提现)"
            android:textColor="@color/white"
            android:textSize="@dimen/xsp_13"

            />
    </RelativeLayout>
    <RelativeLayout
       android:layout_marginTop="@dimen/xdp_121"
        android:layout_alignTop="@id/recharge_rlt"
        android:layout_width="match_parent"
        android:background="@mipmap/di"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="@dimen/xdp_45"
            android:id="@+id/recharge_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/xdp_12"
            android:paddingRight="@dimen/xdp_12"
            />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="充值成功将不可退购"
          android:layout_marginLeft="@dimen/xdp_12"
          android:layout_marginBottom="@dimen/xdp_56"
          android:layout_alignParentBottom="true"
          />
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>