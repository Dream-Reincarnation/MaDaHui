<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/paypass_farme"
    android:background="@color/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
       <include
           android:layout_width="match_parent"
           android:layout_height="@dimen/xdp_44"
           layout="@layout/item_bar"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_1"
            android:background="@color/background"
            />

        <LinearLayout
            android:id="@+id/pass_lin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/xdp_60"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/xdp_12"
                android:text="旧密码"
                android:textColor="@color/black"
                android:textSize="@dimen/xsp_15" />

            <EditText
                android:id="@+id/oldpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/xdp_25"
                android:background="@null"
                android:hint="请输入旧密码"
                android:textSize="@dimen/xsp_13"

                android:inputType="textPassword"
                android:maxLength="32"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
            android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/xdp_60"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/paypass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLength="32"
            android:textSize="@dimen/xsp_13"
            android:singleLine="true"
            android:hint="请输入支付密码"
            android:layout_marginLeft="@dimen/xdp_25"
            />
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/paypass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="请再次确认支付密码"
            android:textSize="@dimen/xsp_13"
            android:layout_marginLeft="@dimen/xdp_25"
            android:inputType="textPassword"
            android:maxLength="32"
            android:singleLine="true"
            />
    </LinearLayout>
     <TextView
         android:id="@+id/paypass_forget"
         android:layout_width="wrap_content"
         android:layout_gravity="right"
         android:layout_height="@dimen/xdp_34"
         android:text="忘记密码?"
         android:textColor="@color/mine_unselect"
         android:textSize="@dimen/xsp_13"
         android:gravity="right"
         android:layout_marginTop="@dimen/xdp_4"
         android:layout_marginRight="@dimen/xdp_12"
         />
    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/xdp_30"
        android:layout_marginRight="@dimen/xdp_30"
        android:layout_height="@dimen/xdp_44"
        android:layout_marginTop="@dimen/xdp_100"
        android:text="确定"
        android:background="@drawable/buttonred"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/xsp_18"
        android:id="@+id/paypass_bt"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/keyboardViewPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" />
</FrameLayout>