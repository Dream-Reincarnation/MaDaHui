<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/login_back"
            android:layout_width="@dimen/xdp_40"
            android:layout_height="@dimen/xdp_40">

            <ImageView
                android:layout_width="@dimen/xdp_15"
                android:layout_height="@dimen/xdp_15"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/xdp_12"
                android:src="@mipmap/cuo" />
        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/xdp_96"
            android:layout_height="@dimen/xdp_96"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/xdp_74"
            android:src="@mipmap/login_logo" />

        <LinearLayout
            android:id="@+id/wechat_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_44"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/xdp_38"
            android:layout_marginRight="@dimen/xdp_38"
            android:layout_marginBottom="@dimen/xdp_200"
            android:background="@drawable/buttonred"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/xdp_22"
                android:layout_height="@dimen/xdp_19"
                android:src="@mipmap/weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xdp_4"
                android:text="微信登录"
                android:textColor="@color/white1"
                android:textSize="@dimen/xsp_17" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_44"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/xdp_38"
            android:layout_marginRight="@dimen/xdp_38"
            android:layout_marginBottom="@dimen/xdp_136"
            android:background="@drawable/buttonred"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/xdp_22"
                android:layout_height="@dimen/xdp_19"
                android:src="@mipmap/phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xdp_2"
                android:text="手机号登录"
                android:textColor="@color/mine_unselect"
                android:textSize="@dimen/xsp_17" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/xdp_40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyrigh©"
                android:textColor="@color/mine_unselect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-2020 麦达汇 maidahui.com版权所有"
                android:textColor="@color/mine_unselect"

                android:textSize="@dimen/xsp_11" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xsp_11"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/xdp_20"
            android:text="当前版本1.0"
            android:textColor="@color/mine_unselect" />
    </RelativeLayout>
</LinearLayout>