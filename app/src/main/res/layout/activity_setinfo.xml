<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        layout="@layout/item_bar" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_1"
        android:background="@color/background"
        />
      <FrameLayout
          android:layout_width="wrap_content"
          android:layout_marginTop="@dimen/xdp_15"
          android:layout_gravity="center"
          android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/setinfo_head"
           android:layout_width="@dimen/xdp_83"
           android:layout_height="@dimen/xdp_83"
           android:src="@mipmap/photo"
           />

            <!-- <TextView
                 android:layout_width="@dimen/xdp_83"
                 android:layout_height="@dimen/xdp_24"
                 android:text="更换头像"
                 android:background="@drawable/semicircle"
                 android:paddingBottom="@dimen/xdp_8"
                 android:textSize="@dimen/xsp_11"
                 android:layout_gravity="bottom"
                 android:textColor="@color/white"
                 android:layout_alignParentBottom="true"
                 android:gravity="center"
                 />-->

      </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_45"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:layout_marginTop="@dimen/xdp_17"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/xdp_60"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/xdp_8"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/setinfo_nickname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="中国好小伙"
                android:textColor="@color/mine_unselect"
                android:textSize="@dimen/xsp_13"
                android:background="@null"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_1"
                android:layout_gravity="bottom"
                android:background="@color/background"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_45"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/xdp_60"
            android:layout_height="wrap_content"
            android:text="身高"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            />
        <LinearLayout

            android:layout_marginLeft="@dimen/xdp_8"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/setinfo_height"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="中国好小伙"
                android:textColor="@color/mine_unselect"
                android:textSize="@dimen/xsp_13"
                android:background="@null"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_1"
                android:layout_gravity="bottom"
                android:background="@color/background"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_45"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/xdp_60"
            android:layout_height="wrap_content"
            android:text="体重"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/xdp_8"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/setinfo_weight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="中国好小伙"
                android:textColor="@color/mine_unselect"
                android:textSize="@dimen/xsp_13"
                android:background="@null"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_1"
                android:layout_gravity="bottom"
                android:background="@color/background"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_45"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/xdp_60"
            android:layout_height="wrap_content"
            android:text="生日"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/xdp_8"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/setinfo_birther"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="中国好小伙"
                android:gravity="center|left"
                android:textColor="@color/mine_unselect"
                android:textSize="@dimen/xsp_13"
                android:background="@null"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_1"
                android:layout_gravity="bottom"
                android:background="@color/background"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_45"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/xdp_60"
            android:layout_height="wrap_content"
            android:text="所在地"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/xdp_8"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="中国好小伙"
                android:textColor="@color/mine_unselect"
                android:textSize="@dimen/xsp_13"
                android:background="@null"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_1"
                android:layout_gravity="bottom"
                android:background="@color/background"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_45"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/xdp_60"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/xdp_8"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/setinfo_boy"
                    android:layout_width="@dimen/xdp_38"
                    android:layout_height="@dimen/xdp_16"
                    android:background="@mipmap/boysel"
                    android:layout_gravity="center|left"
                    />
                <ImageView
                    android:id="@+id/setinfo_girl"
                    android:layout_marginLeft="@dimen/xdp_17"
                    android:layout_width="@dimen/xdp_38"
                    android:layout_height="@dimen/xdp_16"
                    android:background="@mipmap/girlunsel"
                    android:layout_gravity="center|left"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_1"
                android:layout_gravity="bottom"
                android:background="@color/background"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_45"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/xdp_60"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/xdp_8"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/setinfo_sign"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="中国好小伙"
                android:textColor="@color/mine_unselect"
                android:textSize="@dimen/xsp_13"
                android:background="@null"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_1"
                android:layout_gravity="bottom"
                android:background="@color/background"
                />
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/setinfo_save"
        android:layout_width="@dimen/xdp_315"
        android:layout_height="@dimen/xdp_40"
        android:background="@drawable/buttonred"
        android:text="保存"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/xdp_30"
        android:textSize="@dimen/xsp_15"
        android:layout_gravity="center"
        android:gravity="center"
        />
    
    
</LinearLayout>