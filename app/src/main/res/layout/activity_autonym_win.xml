<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:background="@drawable/solide_item"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/xdp_4"
        android:layout_height="@dimen/xdp_44">

        <FrameLayout
            android:id="@+id/report_back"
            android:layout_width="@dimen/xdp_30"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/xdp_14"
                android:layout_height="@dimen/xdp_28"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/xdp_12"
                android:src="@mipmap/fanhui" />


        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="认证资料"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_17" />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_100"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="@dimen/xdp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textSize="@dimen/xsp_15"
                android:textColor="@color/black"

                android:paddingLeft="@dimen/xdp_12"
                />
            <TextView
                android:id="@+id/autonym_etname"
                android:layout_marginLeft="@dimen/xdp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/xsp_15"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/xdp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textSize="@dimen/xsp_15"
                android:textColor="@color/black"

                android:paddingLeft="@dimen/xdp_12"
                />
            <TextView
                android:id="@+id/autonym_etnum"
                android:layout_marginLeft="@dimen/xdp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/xsp_15"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_50"
        android:layout_marginTop="@dimen/xdp_8"
        android:background="@color/white"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/xdp_12"
          android:text="身份证有效期"
          android:layout_gravity="center"
          android:textSize="@dimen/xsp_15"
          android:textColor="@color/black"

          />
      <TextView
          android:id="@+id/autonym_time"
          android:layout_marginLeft="@dimen/xdp_20"
          android:layout_width="@dimen/xdp_0"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          />
        <TextView
            android:id="@+id/autonym_release"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="重新认证"
            android:visibility="gone"
            android:textColor="@color/Thme"
            android:gravity="center"
            android:layout_marginRight="@dimen/xdp_12"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/xdp_70"
        android:layout_marginTop="@dimen/xsp_16"
        android:layout_width="match_parent"
       android:layout_marginLeft="@dimen/xdp_12"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看"
            android:textSize="@dimen/xsp_9"
            android:textColor="@color/mine_unselect"
            />
        <TextView
            android:id="@+id/autonym_yin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私协议》"
            android:textSize="@dimen/xsp_10"
            android:textColor="@color/Thme"
            />
    </LinearLayout>
</LinearLayout>