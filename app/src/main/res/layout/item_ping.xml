<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客官，您对我的服务还满意吗?"
        android:textSize="@dimen/xsp_17"
        android:textColor="@color/black"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/ping_img"
        android:layout_marginTop="@dimen/xdp_20"
        android:layout_width="@dimen/xdp_80"
        android:layout_gravity="center"
        android:layout_height="@dimen/xdp_80"
        android:src="@mipmap/photo"
        />
    <TextView
        android:id="@+id/ping_name"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="某某店铺小丽为您服务"
        android:textSize="@dimen/xsp_15"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/xdp_20"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亲，对我的服务打个分吧"
        android:textSize="@dimen/xsp_17"
        android:textColor="@color/red"
        android:layout_marginTop="@dimen/xdp_20"
        android:layout_gravity="center"

        />
    <RatingBar
        android:layout_gravity="center"
        android:id="@+id/mRatingBar"
        android:layout_marginTop="@dimen/xdp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
     />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:orientation="horizontal"
       >
       <TextView
           android:id="@+id/ping_cancle"
           android:layout_width="@dimen/xdp_100"
           android:layout_height="@dimen/xdp_30"
           android:background="@color/grey1"
           android:text="取消"
           android:textColor="@color/white"
           android:gravity="center"
           android:textSize="@dimen/xsp_17"

           />
       <TextView
           android:id="@+id/ping_query"
           android:layout_marginLeft="@dimen/xdp_10"
           android:layout_width="@dimen/xdp_100"
           android:layout_height="@dimen/xdp_30"
           android:background="@color/Thme"
           android:text="确定"
           android:textColor="@color/white"
           android:gravity="center"
           android:textSize="@dimen/xsp_17"
           />
   </LinearLayout>
</LinearLayout>