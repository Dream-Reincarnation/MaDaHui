<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/logisticsm_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/xdp_12"
    android:paddingTop="@dimen/xdp_10"
    android:paddingRight="@dimen/xdp_12"
    android:paddingBottom="@dimen/xdp_10">


    <TextView
        android:id="@+id/logisticsm_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2018 9月13号 10:29"
        android:textSize="@dimen/xsp_10" />

    <androidx.cardview.widget.CardView
        android:id="@+id/logistics_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xdp_9"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/xdp_5"
        app:cardElevation="@dimen/xdp_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/xdp_9"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/xdp_10"
                android:paddingRight="@dimen/xdp_12">

                <ImageView
                    android:id="@+id/logisticsm_head"
                    android:layout_width="@dimen/xdp_15"
                    android:layout_height="@dimen/xdp_15"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/logisticsm_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/xdp_7"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_17" />


            </LinearLayout>

            <TextView
                android:id="@+id/logisticsm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_13"
                android:paddingLeft="@dimen/xdp_10"
                android:paddingRight="@dimen/xdp_12"
                android:textColor="@color/tintgrey"
                android:textSize="@dimen/xsp_13"
                android:visibility="gone"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_14"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/xdp_10"
                android:paddingRight="@dimen/xdp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="存放地址:"
                    android:textColor="@color/tintgrey"
                    android:textSize="@dimen/xsp_14" />

                <TextView
                    android:id="@+id/logis_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xdp_18"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_14"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/xdp_10"
                android:paddingRight="@dimen/xdp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递信息:"
                    android:textColor="@color/tintgrey"
                    android:textSize="@dimen/xsp_14" />

                <TextView
                    android:id="@+id/logisticsm_express"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xdp_18"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_14"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/xdp_10"
                android:paddingRight="@dimen/xdp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递手机:"
                    android:textColor="@color/tintgrey"
                    android:textSize="@dimen/xsp_14" />

                <TextView
                    android:id="@+id/logisticsm_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xdp_18"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_14" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_14"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/xdp_10"
                android:paddingRight="@dimen/xdp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递名称:"
                    android:textColor="@color/tintgrey"
                    android:textSize="@dimen/xsp_14" />

                <TextView
                    android:id="@+id/logisticsm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xdp_18"
                    android:textColor="@color/black"

                    android:textSize="@dimen/xsp_14" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/xdp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_1"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/logistics_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_35"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/xdp_10"

                android:paddingRight="@dimen/xdp_12">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="查看详情"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_12" />

                <ImageView
                    android:layout_width="@dimen/xdp_8"
                    android:layout_height="@dimen/xdp_13"
                    android:layout_gravity="center"
                    android:src="@mipmap/gengduo" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>