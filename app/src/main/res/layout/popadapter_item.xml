<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/popada_lin"
    android:layout_marginTop="@dimen/xdp_1"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/xdp_93">

    <ImageView
        android:id="@+id/popada_img"
        android:layout_width="@dimen/xdp_93"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_marginLeft="@dimen/xdp_16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/popada_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xsp_15"
            android:textColor="#212121"
            android:text="相册名称"
            />
        <TextView
            android:id="@+id/popada_num"
            android:layout_marginTop="@dimen/xdp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xsp_15"
            android:textColor="#888888"
            android:text="411"
            />
    </LinearLayout>
</LinearLayout>