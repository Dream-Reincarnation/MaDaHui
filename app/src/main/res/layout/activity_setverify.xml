<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
   <include
       android:layout_width="match_parent"
       android:layout_height="@dimen/xdp_44"
       layout="@layout/item_bar"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/xdp_44"
        android:paddingTop="@dimen/xdp_7"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:text="为了您的账户安全，需要进行账户安全验证，请在以下验证方法中选择一种进行验证"
        android:textColor="@color/black"
        android:textSize="@dimen/xsp_11"
        />
    <LinearLayout
        android:id="@+id/set_mail_verify"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_15"
            android:text="邮箱验证"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/xdp_15"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textColor="@color/mine_unselect"
            android:textSize="@dimen/xsp_13" />

        <ImageView
            android:layout_width="@dimen/xdp_7"
            android:layout_height="@dimen/xdp_12"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/xdp_13"
            android:src="@mipmap/gengduo"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:background="@color/background"
        android:layout_height="@dimen/xdp_1" />
    <LinearLayout
        android:id="@+id/set_phone_verify"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_15"
            android:text="手机号验证"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/xdp_15"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textColor="@color/mine_unselect"
            android:textSize="@dimen/xsp_13" />

        <ImageView
            android:layout_width="@dimen/xdp_7"
            android:layout_height="@dimen/xdp_12"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/xdp_13"
            android:src="@mipmap/gengduo"
            />
    </LinearLayout>
</LinearLayout>