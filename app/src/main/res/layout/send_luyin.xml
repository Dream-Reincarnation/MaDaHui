<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="wrap_content">

   <TextView
       android:id="@+id/lu_time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="1s"
       android:visibility="gone"
       android:layout_gravity="center|top"
       android:layout_marginTop="@dimen/xdp_12"
       android:textColor="@color/black"
       android:textSize="@dimen/xsp_15"
       />
    <Button
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:id="@+id/lu_lin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/xdp_30"
        android:gravity="center"
        android:layout_marginTop="@dimen/xdp_70"

        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="@dimen/xdp_45"
            android:layout_height="@dimen/xdp_45"
            android:src="@mipmap/chonglu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/xdp_22"
            android:text="重录"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lu_lin1"
        android:layout_marginTop="@dimen/xdp_70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginRight="@dimen/xdp_30"
        android:layout_gravity="right"

        >
        <ImageView
            android:layout_width="@dimen/xdp_45"
            android:layout_height="@dimen/xdp_45"
            android:src="@mipmap/wancheng"
            />
        <TextView
            android:layout_marginTop="@dimen/xdp_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"


            />

    </LinearLayout>
    <LinearLayout
            android:id="@+id/send_lu"
            android:layout_gravity="center"
            android:layout_width="@dimen/xdp_65"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/circle"
            android:layout_height="@dimen/xdp_65">
            <ImageView
                android:id="@+id/send_luimg"
                android:layout_width="@dimen/xdp_25"
                android:layout_height="@dimen/xdp_25"
                android:src="@mipmap/weixuanzhong"
                />

        </LinearLayout>
    <TextView
        android:id="@+id/send_lutip"
        android:layout_marginTop="@dimen/xdp_50"
        android:layout_width="wrap_content"
        android:layout_gravity="center"

        android:layout_height="wrap_content"
        android:text="点击或者长按进行录制，最长可录制5分钟"
        android:textSize="@dimen/xsp_11"
        android:textColor="#888888"
        />
</FrameLayout>