<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/xdp_5"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/filter_image"
        android:layout_width="@dimen/xdp_50"
        android:layout_height="@dimen/xdp_50"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/filter_image_tint"
        android:layout_width="@dimen/xdp_50"
        android:layout_height="@dimen/xdp_50"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_effect5"
        android:visibility="invisible" />

    <TextView
        android:textSize="@dimen/xsp_12"
        android:id="@+id/filter_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/xdp_5"
        android:textColor="@color/white" />

</RelativeLayout>