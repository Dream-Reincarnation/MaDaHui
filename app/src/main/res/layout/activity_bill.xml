<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"

        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/xdp_12"
            android:layout_height="@dimen/xdp_22"
            android:id="@+id/bail_back"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="账单详情"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_17" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="时间:"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <TextView
            android:id="@+id/bill_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12312232"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="备注:"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <TextView
            android:id="@+id/bill_bei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12312232"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="余额:"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <TextView
            android:id="@+id/bill_yu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12312232"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="状态:"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <TextView
            android:id="@+id/bill_statu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12312232"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="订单号:"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <TextView
            android:id="@+id/bill_ding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12312232"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />
    </LinearLayout>



</LinearLayout>