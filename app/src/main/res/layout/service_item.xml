<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingRight="@dimen/xdp_12"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/service_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginTop="@dimen/xdp_7"
        android:layout_marginRight="@dimen/xdp_12"

        app:cardCornerRadius="@dimen/xdp_5"
        app:cardElevation="@dimen/xdp_0">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xdp_10"
                android:layout_marginTop="@dimen/xdp_8"
                android:layout_marginRight="@dimen/xdp_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/service_head"
                    android:layout_width="@dimen/xdp_25"
                    android:layout_height="@dimen/xdp_25" />

                <TextView
                    android:id="@+id/service_type"
                    android:layout_width="@dimen/xdp_0"
                    android:layout_marginLeft="@dimen/xdp_12"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="消息类型"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_15" />

                <TextView
                    android:id="@+id/service_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/xsp_10"
                    android:textColor="@color/tintgrey" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/xdp_10"
                android:layout_marginRight="@dimen/xdp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_15"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/service_shopimg"
                    android:layout_width="@dimen/xdp_70"
                    android:layout_height="@dimen/xdp_70" />

                <TextView
                    android:textColor="@color/tintgrey"
                    android:id="@+id/service_content"
                    android:textSize="@dimen/xsp_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/xdp_8"
                    android:ellipsize="end"
                    android:maxLines="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/xdp_10"
                android:layout_marginRight="@dimen/xdp_8"
                android:layout_marginTop="@dimen/xdp_15"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/xdp_30"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/xdp_0"
                    android:layout_weight="1"
                    android:text="查看详情"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_12"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="@dimen/xdp_5"
                    android:layout_height="@dimen/xdp_10"
                    android:src="@mipmap/gengduo"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>