<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lookauto_back"
            android:layout_width="@dimen/xdp_13"
            android:layout_height="@dimen/xdp_22"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我的认证资料"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_17" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/xdp_25"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView

            android:layout_width="@dimen/xdp_70"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/xsp_15"
            android:text="姓名:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lookauto_name"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/xdp_25"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="@dimen/xdp_70"
            android:layout_height="wrap_content"
             android:gravity="right"
            android:textSize="@dimen/xsp_15"
            android:text="身份证号:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/lookauto_num"
            />
    </LinearLayout>
</LinearLayout>