<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:background="@color/white"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/chatact_back"
            android:layout_width="@dimen/xdp_40"
            android:layout_height="@dimen/xdp_40">

            <ImageView

                android:layout_width="@dimen/xdp_13"
                android:layout_height="@dimen/xdp_22"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/xdp_12"
                android:src="@mipmap/fanhui" />
        </FrameLayout>

        <TextView
            android:id="@+id/chatact_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="举报"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_17" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_160"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/xdp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/chat_report_lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_35"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chat_repport_img1"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/xdp_13"
                    android:layout_height="@dimen/xdp_13"
                    android:src="@mipmap/circle_unsel"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xdp_15"
                    android:text="晒单图片与商品不符"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_14"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/chat_report_lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_25"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chat_repport_img2"

                    android:layout_gravity="center"
                    android:layout_width="@dimen/xdp_13"
                    android:layout_height="@dimen/xdp_13"
                    android:src="@mipmap/circle_unsel"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xdp_15"
                    android:text="黄赌毒暴力政治"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_14"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/chat_report_lin3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xdp_25"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chat_repport_img3"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/xdp_13"
                    android:layout_height="@dimen/xdp_13"
                    android:src="@mipmap/circle_unsel"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xdp_15"
                    android:text="骗钱"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_14"

                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/xdp_20"
            android:layout_width="@dimen/xdp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/chat_report_lin4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xdp_35"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/chat_repport_img4"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/xdp_13"
                        android:layout_height="@dimen/xdp_13"
                        android:src="@mipmap/circle_unsel"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xdp_15"
                        android:text="非法欺诈"
                        android:textColor="@color/black"
                        android:textSize="@dimen/xsp_14"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_report_lin5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xdp_25"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/chat_repport_img5"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/xdp_13"
                        android:layout_height="@dimen/xdp_13"
                        android:src="@mipmap/circle_unsel"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xdp_15"
                        android:text="广告灌水"
                        android:textColor="@color/black"
                        android:textSize="@dimen/xsp_14"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_report_lin6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xdp_25"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/chat_repport_img6"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/xdp_13"
                        android:layout_height="@dimen/xdp_13"
                        android:src="@mipmap/circle_unsel"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xdp_15"
                        android:text="其他"
                        android:textColor="@color/black"
                        android:textSize="@dimen/xsp_14"

                        />

                </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <EditText
        android:id="@+id/chat_report_ed"
        android:padding="@dimen/xdp_12"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:layout_width="match_parent"
        android:backgroundTint="@null"
        android:gravity="top"
        android:layout_height="@dimen/xdp_150"
        android:background="@color/background"
        android:hint="可以补充你的投诉内容(选填)"
        />
     <TextView
         android:id="@+id/chat_report_bt"
         android:layout_marginTop="@dimen/xdp_10"
         android:layout_width="@dimen/xdp_70"
         android:layout_gravity="right"
         android:layout_marginRight="@dimen/xdp_12"
         android:layout_height="@dimen/xdp_30"
         android:text="提交"
         android:textColor="@color/white"
         android:gravity="center"
         android:background="@drawable/buttonred"
         android:textSize="@dimen/xsp_17"
         />


</LinearLayout>