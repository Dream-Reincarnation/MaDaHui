<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/xdp_2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/xdp_275"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/xdp_5"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="@dimen/xdp_174"
                android:layout_height="@dimen/xdp_209">

                <ImageView
                    android:id="@+id/recommed_img"
                    android:layout_width="@dimen/xdp_174"
                    android:layout_height="@dimen/xdp_209"
                    android:src="@mipmap/photo"
                    android:scaleType="fitXY" />
                <ImageView
                    android:layout_width="@dimen/xdp_20"
                    android:layout_height="@dimen/xdp_20"
                    android:id="@+id/recommed_video"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/xdp_179"
                    android:layout_marginLeft="@dimen/xdp_9"
                    android:src="@mipmap/bofang"
                    />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/xdp_9"
                android:id="@+id/recommed_title"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/xdp_15"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/xdp_15"
                android:textSize="@dimen/xsp_13"
                android:textColor="@color/black"
                android:text="我是标题"
                android:maxLines="2"
                />
            <RelativeLayout
                android:id="@+id/rela"
                android:layout_marginLeft="@dimen/xdp_15"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/xdp_22"
                    android:layout_height="@dimen/xdp_22"
                    android:id="@+id/recommed_head"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_alignLeft="@id/recommed_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recommed_name"
                    android:maxLength="6"
                    android:layout_marginLeft="@dimen/xdp_25"
                    android:text="用户昵称哈哈"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/xsp_11"
                    android:textColor="@color/black"
                    />


                <ImageView
                    android:id="@+id/recommed_like"
                    android:layout_width="@dimen/xdp_14"
                    android:layout_height="@dimen/xdp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xdp_90"
                    android:src="@mipmap/aixin" />
                <TextView
                    android:id="@+id/recommed_likenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/xsp_13"
                    android:maxLength="4"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/xdp_15"
                    android:textColor="@color/black"
                    android:text="1234"
                    />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>