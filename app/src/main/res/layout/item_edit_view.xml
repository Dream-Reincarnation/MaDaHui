<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ugc_item_thumb_height">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_marginLeft="@dimen/xdp_10"
        android:layout_marginRight="@dimen/xdp_10" />

    <com.ajiani.maidahui.weight.record.cut.RangeSlider
        android:id="@+id/range_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        seekbar:leftThumbDrawable="@mipmap/dyna_cut_left"
        seekbar:leftThumbIndex="0"
        seekbar:lineColor="@color/white"
        seekbar:lineHeight="3dp"
        seekbar:rightThumbDrawable="@mipmap/dyna_cut_right"
        seekbar:thumbWidth="10dp"
        seekbar:tickCount="100" />
</RelativeLayout>