<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#4D000000"
    android:id="@+id/share_farem"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/circlewhitebg"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
     <LinearLayout
         android:layout_marginTop="@dimen/xdp_20"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal"
         >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="还差"
              android:textSize="@dimen/xsp_20"
              android:textColor="@color/black"
              android:textStyle="bold"
              />
     <TextView
         android:id="@+id/share_earn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/xsp_20"
         android:textColor="@color/colorred"
         android:textStyle="bold"
         android:text="1"
         />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="人，赶快邀请好友来拼单吧"
              android:textSize="@dimen/xsp_20"
              android:textColor="@color/black"
              android:textStyle="bold"
              />
     </LinearLayout>
     <TextView
         android:layout_marginTop="@dimen/xdp_15"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/xsp_13"
         android:textColor="@color/tintgrey"
         android:gravity="center"
         android:layout_gravity="center"
         android:text="拼单已发起，人满后立即发货"
         />
     <LinearLayout
         android:layout_marginLeft="@dimen/xdp_54"
         android:layout_marginRight="@dimen/xdp_54"
         android:layout_marginTop="@dimen/xdp_20"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal"
         >
          <ImageView
              android:id="@+id/share_wechat"
              android:layout_width="@dimen/xdp_0"
              android:layout_weight="1"
              android:layout_height="@dimen/xdp_50"
              android:src="@mipmap/share_wechat"
              />
          <ImageView
              android:id="@+id/share_wechatfriends"
              android:layout_width="@dimen/xdp_0"
              android:layout_weight="1"
              android:layout_height="@dimen/xdp_50"
              android:src="@mipmap/share_friends"
              />
          <ImageView
              android:id="@+id/share_print"
              android:layout_width="@dimen/xdp_0"
              android:layout_weight="1"
              android:layout_height="@dimen/xdp_50"
              android:src="@mipmap/share_printshot"
              />
     </LinearLayout>

    <TextView
         android:layout_width="match_parent"
         android:layout_height="@dimen/xdp_34"
         android:background="@color/white"
         />
</LinearLayout>
</FrameLayout>