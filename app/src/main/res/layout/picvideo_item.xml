<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/xdp_92"
    android:layout_marginTop="@dimen/xdp_1"


    android:layout_height="@dimen/xdp_92">
     <FrameLayout

         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <ImageView
             android:id="@+id/picvideo_thumb"
             android:layout_width="match_parent"
             android:scaleType="centerCrop"
             android:layout_height="match_parent"
             />
         <TextView
             android:id="@+id/picvideo_check"
             android:layout_width="@dimen/xdp_21"
             android:layout_height="@dimen/xdp_21"
             android:textColor="#FFFFFF"
             android:textSize="@dimen/xsp_15"
             android:layout_gravity="right"
             android:gravity="center"
             android:layout_marginTop="@dimen/xdp_5"
             android:layout_marginRight="@dimen/xdp_5"
             android:background="@drawable/picture_wechat_num_selector"
             />


         <TextView
             android:id="@+id/picvideo_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/xsp_10"
             android:textColor="@color/white"
            android:layout_marginRight="@dimen/xdp_6"
             android:layout_marginBottom="@dimen/xdp_6"
             android:layout_gravity="right|bottom"
             />
     </FrameLayout>
</LinearLayout>