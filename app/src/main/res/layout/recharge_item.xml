<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/xdp_12"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xdp_50">
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/xdp_2"
        android:id="@+id/recharge_lin2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_50"
        app:cardCornerRadius="@dimen/xdp_5"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/xdp_24"
                android:layout_height="@dimen/xdp_20"
                android:src="@mipmap/zuanshi"
                android:layout_marginLeft="@dimen/xdp_13"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/xdp_12"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/rechage_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值100元"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_13"
                    />
                <TextView
                    android:id="@+id/recharge_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送100积分"
                    android:textSize="@dimen/xsp_11"
                    />
            </LinearLayout>
        </LinearLayout>
            <TextView
                android:layout_marginRight="@dimen/xdp_87"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/xdp_2"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/xdp_135"
                android:background="@color/background" />
            <TextView
                android:layout_marginRight="@dimen/xdp_28"
                android:layout_alignParentRight="true"
                android:id="@+id/recharge_num"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥100"
                android:textSize="@dimen/xsp_15"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/xdp_20"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>