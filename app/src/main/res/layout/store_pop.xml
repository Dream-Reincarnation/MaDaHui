<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
   android:layout_marginBottom="@dimen/xdp_50"

    android:layout_height="match_parent"

    app:cardCornerRadius="@dimen/xdp_5">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_44"
            android:background="#0D1215">

            <TextView
                android:id="@+id/store_pop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="店铺名称"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_17" />

            <TextView
                android:id="@+id/store_pop_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/xdp_12"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_2"
                android:layout_gravity="bottom"
                android:background="#464748" />
        </FrameLayout>
       <com.scwang.smartrefresh.layout.SmartRefreshLayout
           android:id="@+id/store_pop_smart"
           android:layout_width="match_parent"
           android:layout_height="@dimen/xdp_0"
           android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/store_pop_rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0D1215" />
       </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_50"
            android:background="#0D1215"
            >
            <TextView
                android:id="@+id/addshop_shop"
                android:layout_width="@dimen/xdp_140"
                android:layout_height="@dimen/xdp_33"
                android:background="@drawable/buttonredun"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="加入我的商品货架"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/xdp_12"
                />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>