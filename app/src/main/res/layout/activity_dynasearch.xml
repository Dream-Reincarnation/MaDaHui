<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="@dimen/xdp_2"
            android:layout_width="match_parent"

            android:layout_height="@dimen/xdp_44"
            android:orientation="horizontal">
          <FrameLayout
              android:id="@+id/dynasear_back"
              android:layout_width="@dimen/xdp_40"
              android:layout_height="match_parent">
            <ImageView

                android:layout_width="@dimen/xdp_17"
                android:layout_height="@dimen/xdp_17"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/xdp_12"
                android:src="@mipmap/fanhui" />
          </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/xdp_10"

                android:layout_marginRight="@dimen/xdp_12"
                android:background="@drawable/circle2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dynasear_search"
                    android:layout_width="@dimen/xdp_19"
                    android:layout_height="@dimen/xdp_19"
                    android:layout_gravity="center"
                    android:src="@mipmap/nav_icon_search" />

                <EditText
                    android:id="@+id/dynasear_ed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/xdp_11"
                    android:background="@null"
                    android:hint="请输入你要搜索的内容"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"

                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_11" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/xsp_12"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xsp_15"
                    android:id="@+id/dynasear_seartv"
                    />
            </LinearLayout>
        </LinearLayout>

      <com.google.android.material.tabs.TabLayout
          android:layout_marginTop="@dimen/xdp_5"
          android:layout_width="match_parent"
          android:layout_height="@dimen/xdp_44"
          android:visibility="visible"
          android:id="@+id/dyna_tab"
          />
      <androidx.viewpager.widget.ViewPager
          android:layout_width="match_parent"
          android:visibility="visible"
          android:layout_height="match_parent"
          android:id="@+id/dyna_vp"
          />

</LinearLayout>