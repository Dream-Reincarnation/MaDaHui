<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chatnews_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="系统通知"

            android:textColor="@color/black"
            android:textSize="@dimen/xsp_17" />

        <TextView
            android:id="@+id/chatnews_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="2019/9/18"
            android:layout_marginRight="@dimen/xdp_16"
            android:textColor="@color/mine_unselect"
            android:textSize="@dimen/xsp_13" />

    </LinearLayout>
    <TextView
        android:id="@+id/chatnews_title"
        android:layout_marginTop="@dimen/xdp_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息助手标题"
        android:textSize="@dimen/xsp_15"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/chatnews_text"
        android:layout_marginTop="@dimen/xdp_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息助手内容消息助手内容消息助手内容消息助手内容消息助手内容"
        android:textSize="@dimen/xsp_13"
        android:textColor="@color/black"
        />
</LinearLayout>