<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_top_msg_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/xdp_12"
    android:layout_marginRight="@dimen/xdp_12"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/xdp_10"
    app:cardElevation="@dimen/xdp_0"
    android:orientation="vertical">
    <!--<androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/xdp_40"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/xdp_5"
        android:layout_height="wrap_content">-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_40"
        android:orientation="horizontal"
        >
      <ImageView
          android:id="@+id/notifica_head"
          android:layout_width="@dimen/xdp_20"
          android:layout_height="@dimen/xdp_20"
          android:layout_marginLeft="@dimen/xdp_10"

          android:layout_gravity="center"
          android:src="@mipmap/photo" />
        <TextView
            android:id="@+id/notifica_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xdp_12"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="金大勇的服装店"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <TextView

            android:id="@+id/notifica_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginRight="@dimen/xdp_12"
            android:text="19:00" />


    </LinearLayout>
          <TextView
              android:id="@+id/notifica_content"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/xdp_12"
              android:layout_marginBottom="@dimen/xdp_5"
              android:layout_marginTop="@dimen/xdp_5"
              android:ellipsize="end"
              android:singleLine="true"
              android:text="啦啦啦啦"
              android:textSize="@dimen/xsp_13" />
  </LinearLayout>
<!--    </androidx.cardview.widget.CardView>-->

</androidx.cardview.widget.CardView>

