<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <include
       android:layout_width="match_parent"
       android:layout_height="@dimen/xdp_44"
       layout="@layout/item_bar"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="@dimen/xdp_1"
       android:background="@color/background"
       />
    <LinearLayout
        android:id="@+id/alilin"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="@dimen/xdp_70"
            android:layout_height="@dimen/xdp_70"
            android:id="@+id/bind_phone"
            android:layout_marginTop="@dimen/xdp_32"
            android:layout_gravity="center"

            android:src="@mipmap/icon_alipay"
            />
        <TextView
            android:id="@+id/bind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            android:text="支付宝账号已绑定"
            android:layout_marginTop="@dimen/xdp_15"
            />
        <TextView
            android:id="@+id/bindali_phone"
            android:layout_marginTop="@dimen/xdp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorred"
            android:layout_gravity="center"
            android:textSize="@dimen/xsp_15"
            />

        <LinearLayout
            android:id="@+id/bindali_unbind"
            android:layout_marginTop="@dimen/xdp_25"
            android:layout_width="@dimen/xdp_100"
            android:layout_height="@dimen/xdp_20"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解绑"
                android:layout_gravity="center"
                android:textSize="@dimen/xsp_11"
                android:textColor="@color/mine_unselect"
                />
            <ImageView
                android:layout_width="@dimen/xdp_6"
                android:layout_height="@dimen/xdp_8"
                android:src="@mipmap/gengduo"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_marginRight="@dimen/xdp_12"
        android:layout_marginTop="@dimen/xdp_4"
        >
        <TextView
            android:id="@+id/bind_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_11"
            android:text="该账号为提现收款账号，请确保绑定账号信息与麦达汇账号实名信息一致当前实名信息姓名：李*晖"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"

        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝账号"
            android:textSize="@dimen/xsp_15"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/xdp_15"
            />
        <EditText
            android:id="@+id/changealipay_edp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入支付宝账号"
            android:layout_marginLeft="@dimen/xdp_12"
            android:textSize="@dimen/xsp_13"
            android:layout_gravity="center"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/bind"
        android:layout_marginLeft="@dimen/xdp_30"
        android:layout_marginRight="@dimen/xdp_30"
        android:layout_marginTop="@dimen/xdp_50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_40"
        android:background="@drawable/buttonred"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/xsp_13"
        android:gravity="center"
        android:layout_gravity="center"
        />

</LinearLayout>