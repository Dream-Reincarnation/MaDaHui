<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:background="@drawable/solide_item"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/xdp_4"
        android:layout_height="@dimen/xdp_44">

        <FrameLayout
            android:id="@+id/report_back"
            android:layout_width="@dimen/xdp_30"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/xdp_14"
                android:layout_height="@dimen/xdp_28"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/xdp_12"
                android:src="@mipmap/fanhui" />


        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="实名认证"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_17" />

    </androidx.cardview.widget.CardView>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/xdp_18"
         android:orientation="horizontal"
         android:gravity="center|left"
         android:background="#EECFD0"
         >
         <ImageView
             android:layout_width="@dimen/xdp_8"
             android:layout_height="@dimen/xdp_10"
             android:layout_marginLeft="@dimen/xdp_12"
             android:src="@mipmap/autonym_lock"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_marginLeft="@dimen/xdp_8"
             android:layout_height="wrap_content"
             android:text="麦达汇官方已对此信息进行加密处理，仅用于身份验证"
             android:textSize="@dimen/xsp_11"
             android:textColor="@color/white"

             />

     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
             android:layout_height="@dimen/xdp_135"
         android:background="@color/white"
         android:orientation="vertical"
         >
    <TextView
        android:paddingTop="@dimen/xdp_14"
        android:paddingLeft="@dimen/xdp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="身份证信息（必填）"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/xsp_15"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/xdp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:textSize="@dimen/xsp_15"
            android:textColor="@color/black"

            android:paddingLeft="@dimen/xdp_12"
            />
        <EditText
            android:id="@+id/autonym_etname"
            android:layout_marginLeft="@dimen/xdp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/xsp_15"
            android:hint="请填写真实姓名"
            />
    </LinearLayout>

         <LinearLayout
             android:layout_marginTop="@dimen/xdp_20"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:background="@color/white"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="身份证号"
                 android:textSize="@dimen/xsp_15"
                 android:textColor="@color/black"

                 android:paddingLeft="@dimen/xdp_12"
                 />
             <EditText
                 android:id="@+id/autonym_etnum"
                 android:layout_marginLeft="@dimen/xdp_20"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@null"
                 android:textSize="@dimen/xsp_15"
                 android:hint="请填写正确的身份证号"
                 />
         </LinearLayout>
     </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/xdp_8"
        android:background="@color/white"
        android:paddingRight="@dimen/xdp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:paddingTop="@dimen/xdp_14"
            android:paddingLeft="@dimen/xdp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="身份证照片（必填）"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15"
            />
        <TextView
            android:layout_marginTop="@dimen/xdp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xdp_12"
            android:textSize="@dimen/xsp_12"
            android:textColor="@color/mine_unselect"
            android:text="请上传真实的身份证照片，请保证身份信息清晰可见，否则无法通过审核"
            />
       <LinearLayout
           android:layout_marginTop="@dimen/xdp_20"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:orientation="horizontal"
           >
           <FrameLayout
               android:layout_marginLeft="@dimen/xdp_12"
               android:layout_width="@dimen/xdp_0"
               android:layout_weight="1"
               android:layout_height="@dimen/xdp_116">
           <ImageView
               android:layout_width="@dimen/xdp_160"
                android:layout_gravity="center"
               android:layout_height="@dimen/xdp_104"
               android:src="@mipmap/autonmytop"
               />
               <ImageView
                   android:id="@+id/autonym_carme"
                   android:layout_width="@dimen/xdp_40"
                   android:layout_height="@dimen/xdp_40"
                   android:layout_gravity="center"
                   android:src="@mipmap/autonmy_camre"
                   />
               <ImageView
                   android:id="@+id/autonym_top"
                   android:visibility="gone"
                   android:scaleType="centerCrop"
                   android:layout_width="@dimen/xdp_160"
                   android:layout_gravity="center"
                   android:layout_height="@dimen/xdp_104"
                   />
           </FrameLayout>

           <FrameLayout
               android:layout_marginLeft="@dimen/xdp_12"
               android:layout_width="@dimen/xdp_0"
               android:layout_weight="1"
               android:layout_height="@dimen/xdp_116">
               <ImageView
                   android:layout_width="@dimen/xdp_160"
                   android:layout_gravity="center"
                   android:layout_height="@dimen/xdp_104"
                   android:src="@mipmap/autonmybot"
                   />
               <ImageView
                   android:id="@+id/autonym_carme2"
                   android:layout_width="@dimen/xdp_40"
                   android:layout_height="@dimen/xdp_40"
                   android:layout_gravity="center"
                   android:src="@mipmap/autonmy_camre"
                   />
               <ImageView
                   android:id="@+id/autonym_bot"
                   android:visibility="gone"
                   android:scaleType="centerCrop"
                   android:layout_width="@dimen/xdp_160"
                   android:layout_gravity="center"
                   android:layout_height="@dimen/xdp_104"

                   />
           </FrameLayout>
       </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/xdp_15"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xsp_15"
            android:textColor="@color/tintgrey"
            android:text="为什么要实名认证"
            />
        <ImageView
            android:id="@+id/autonym_why"
            android:layout_width="@dimen/xdp_14"
            android:layout_height="@dimen/xdp_14"
            android:layout_gravity="center"
            android:src="@mipmap/autonmy_why"
            android:layout_marginLeft="@dimen/xdp_8"
            />
    </LinearLayout>
    
    <TextView
        android:id="@+id/autonym_bt"
        android:layout_marginTop="@dimen/xdp_100"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/xdp_30"
        android:layout_marginRight="@dimen/xdp_30"
        android:layout_gravity="bottom"
        android:background="@drawable/buttonred"
        android:text="提交"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/xsp_15"
        android:layout_height="@dimen/xdp_40"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/xsp_16"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout

            android:layout_width="@dimen/xdp_20"
            android:layout_height="@dimen/xdp_20">
        <ImageView
            android:id="@+id/autonym_sel"
            android:layout_width="@dimen/xdp_10"
            android:src="@mipmap/circle_unsel"
            android:layout_gravity="center"
            android:layout_height="@dimen/xdp_10" />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"

            android:textSize="@dimen/xsp_9"
            android:textColor="@color/mine_unselect"
            />
        <TextView
            android:id="@+id/autonym_yin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私协议》"
            android:textSize="@dimen/xsp_10"
            android:textColor="@color/Thme"
            />
    </LinearLayout>


</LinearLayout>