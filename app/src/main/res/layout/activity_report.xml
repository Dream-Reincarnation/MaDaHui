<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/report_back"
            android:layout_width="@dimen/xdp_13"
            android:layout_height="@dimen/xdp_22"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="举报"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_17" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_30"
        android:layout_marginLeft="@dimen/xdp_12"
        android:gravity="center|left"
        android:text="请选择举报的原因"
        android:textColor="@color/mine_unselect"
        android:textSize="@dimen/xsp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_weight="1"
            android:text="色情低俗"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <CheckBox
            android:id="@+id/report_check1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/xdp_12"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_1"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_weight="1"
            android:text="违法涉政"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <CheckBox
            android:id="@+id/report_check2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/xdp_12"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_1"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_weight="1"
            android:text="恶意广告"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <CheckBox
            android:id="@+id/report_check3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/xdp_12"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_1"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_weight="1"
            android:text="血腥暴力"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <CheckBox
            android:id="@+id/report_check4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/xdp_12"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_1"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_weight="1"
            android:text="搬运抄袭"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <CheckBox
            android:id="@+id/report_check5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/xdp_12"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_1"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_44"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xdp_12"
            android:layout_weight="1"
            android:text="其他"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_15" />

        <CheckBox
            android:id="@+id/report_check6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/xdp_12"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_1"
        android:background="@color/background" />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="@dimen/xdp_14" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_175"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/report_ed"
            android:hint="请描述你的举报理由"
            android:textSize="@dimen/xsp_15"
            android:textColor="@color/black"
            android:background="@null"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/xdp_10"
            android:layout_marginRight="@dimen/xdp_12"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/report_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="0"
                android:textSize="@dimen/xsp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="/200"
                android:textSize="@dimen/xsp_15"
                />
        </LinearLayout>

    </RelativeLayout>
    
    <Button
        android:id="@+id/report_bt"
        android:layout_marginTop="@dimen/xdp_40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_50"
        android:background="@drawable/theml2"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/xsp_15"
        />
</LinearLayout>