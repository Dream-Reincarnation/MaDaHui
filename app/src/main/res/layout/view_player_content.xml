<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/player_cloud_view"
        android:layout_width="wrap_content"
        android:background="@color/black"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/player_iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="centerCrop" />


    <com.yqw.hotheart.HeartFrameLayout
        android:id="@+id/doublelike"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:swipe_image="@mipmap/like">

        <!--商品列表-->
        <FrameLayout
            android:id="@+id/video_back"
            android:layout_width="@dimen/xdp_50"
            android:layout_height="@dimen/xdp_40"
            android:layout_marginTop="@dimen/xdp_5">

            <ImageView
                android:layout_width="@dimen/xdp_12"
                android:layout_height="@dimen/xdp_21"
                android:layout_gravity="center"
                android:src="@mipmap/fanhui3" />
        </FrameLayout>


        <ImageView
            android:id="@+id/video_pause"
            android:layout_width="@dimen/xdp_100"
            android:layout_height="@dimen/xdp_100"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:visibility="visible" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/xdp_0"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/xdp_14"
                android:layout_marginBottom="@dimen/xdp_15"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/user_head"
                        android:layout_width="@dimen/xdp_48"
                        android:layout_height="@dimen/xdp_48"
                        android:src="@mipmap/photo" />

                    <FrameLayout
                        android:id="@+id/user_guan"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/xdp_23"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="@dimen/xdp_37">

                        <ImageView
                            android:id="@+id/user_guan2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/guanzhu" />
                    </FrameLayout>
                </FrameLayout>

                <ImageView
                    android:id="@+id/product_like"
                    android:layout_width="@dimen/xdp_35"
                    android:layout_height="@dimen/xdp_35"
                    android:layout_marginTop="@dimen/xdp_21"
                    android:src="@mipmap/aixin" />

                <TextView
                    android:id="@+id/mproduct_likenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xdp_2"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsp_11" />

                <ImageView
                    android:id="@+id/mproduct_comment"
                    android:layout_width="@dimen/xdp_35"
                    android:layout_height="@dimen/xdp_30"
                    android:layout_marginTop="@dimen/xdp_20"
                    android:src="@mipmap/video_comment" />

                <TextView
                    android:id="@+id/mproduct_commnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xdp_2"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsp_11" />

                <ImageView
                    android:id="@+id/mproduct_reward"
                    android:layout_width="@dimen/xdp_35"
                    android:layout_height="@dimen/xdp_30"
                    android:layout_marginTop="@dimen/xdp_26"
                    android:src="@mipmap/shangpin"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mproduct_rewardnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xdp_2"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsp_11"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/mpro_more"
                    android:layout_width="@dimen/xdp_35"
                    android:layout_height="@dimen/xdp_35"
                    android:layout_marginTop="@dimen/xdp_20"
                    android:src="@mipmap/sharefill" />

                <TextView
                    android:id="@+id/product_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xdp_2"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsp_11" />

                <LinearLayout
                    android:id="@+id/product_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xdp_20"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView

                        android:layout_width="@dimen/xdp_35"
                        android:layout_height="@dimen/xdp_35"
                        android:src="@mipmap/video_shoping" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/xdp_2"
                        android:text="购买"
                        android:textColor="@color/white"
                        android:textSize="@dimen/xsp_13" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/product_disk"
                    android:layout_width="@dimen/xdp_50"
                    android:layout_height="@dimen/xdp_50"
                    android:layout_marginTop="@dimen/xdp_20"
                    android:src="@mipmap/video_disk"
                    android:visibility="gone" />
            </LinearLayout>

           <RelativeLayout
               android:layout_marginRight="@dimen/xdp_70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/xdp_15">

            <TextView
                android:id="@+id/mproduce_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xdp_13"
                android:text="用户昵称"
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_17"
                android:textStyle="bold" />

  

            <TextView
                android:id="@+id/product_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mproduce_name"
                android:layout_marginLeft="@dimen/xdp_13"
                android:layout_marginTop="@dimen/xdp_6"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/xsp_15" />
               
               <LinearLayout
                   android:id="@+id/product_musiclin"
                   android:visibility="gone"
                   android:layout_below="@id/product_content"
                   android:layout_width="wrap_content"
                   android:layout_marginTop="@dimen/xdp_12"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
               
             <ImageView
                 android:layout_marginLeft="@dimen/xdp_13"
                 android:layout_gravity="center"
                 android:layout_width="@dimen/xdp_12"
                 android:layout_height="@dimen/xdp_14"
                 android:src="@mipmap/video_music"
                 />
               <TextView
                   android:layout_gravity="center"
                   android:layout_marginLeft="@dimen/xdp_6"
                   android:id="@+id/product_music_name"
                   android:layout_width="@dimen/xdp_140"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:ellipsize="end"
                   android:textSize="@dimen/xsp_15"
                   android:textColor="@color/white"
                   />
               </LinearLayout>
           </RelativeLayout>


        </RelativeLayout>
         <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/video_rel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xdp_80"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|center"
                android:background="@mipmap/video_shopbg"
                android:visibility="gone" />

        </LinearLayout>
    </com.yqw.hotheart.HeartFrameLayout>




    <ImageView
        android:id="@+id/player_civ_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/photo" />

    <TextView
        android:id="@+id/player_tv_publisher_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/player_civ_avatar"
        android:gravity="center"
        android:text="nick name"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tx_video_review_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@mipmap/paishe"/>
</RelativeLayout>