<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="@dimen/xdp_265"
         android:layout_height="@dimen/xdp_305"
         android:layout_marginLeft="@dimen/xdp_35"
         android:layout_marginRight="@dimen/xdp_35"
         android:orientation="vertical"
         android:layout_gravity="center"
         android:background="@color/white"
         android:layout_marginBottom="@dimen/xdp_56"
         android:padding="@dimen/xdp_9"

         >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xdp_15">
            <ImageView
                android:layout_width="@dimen/xdp_11"
                android:layout_height="@dimen/xdp_11"
                android:layout_gravity="center|left"
                android:src="@mipmap/duil"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文案已帮你复制"
                android:layout_gravity="center|left"
                android:textSize="@dimen/xsp_13"
                android:layout_marginLeft="@dimen/xdp_17"
                />
            <ImageView
                android:layout_width="@dimen/xdp_16"
                android:layout_height="@dimen/xdp_16"
                android:src="@mipmap/false1"
                android:id="@+id/friendcircles_dis"
                android:layout_gravity="center|right"
                android:layout_marginRight="@dimen/xdp_12"
                />
        </FrameLayout>
         <androidx.recyclerview.widget.RecyclerView
             android:layout_marginTop="@dimen/xdp_6"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/friendscircle_rel"
             />
     </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xdp_130"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_gravity="bottom"
        >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="新人注册并瞎下载App,立享5元代金券"
             android:textSize="@dimen/xsp_15"
             android:textColor="@color/black"
             android:layout_gravity="center"
             android:layout_marginTop="@dimen/xdp_12"
             />
        <ImageView
            android:id="@+id/friendscirclr_wechat"
            android:layout_width="@dimen/xdp_45"
            android:layout_height="@dimen/xdp_45"
            android:src="@mipmap/wechatfriends"
            android:layout_marginTop="@dimen/xdp_12"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="微信好友"
            android:textColor="@color/black"
            android:textSize="@dimen/xsp_13"
            android:layout_marginTop="@dimen/xdp_6"
            />
    </LinearLayout>

</FrameLayout>